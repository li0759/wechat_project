/* packageProfile/components/user-info-panel/index.wxss */
.user-info-panel {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.panel-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.nav-placeholder {
  width: 60rpx;
}

/* 滚动区域 */
.panel-scroll {
  flex: 1;
  height: 100%;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 用户信息容器 */
.user-info-container {
  width: 100%;
  padding: 10rpx 0 30rpx;
}

.avatar-section {
  background-color: #fff;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(25, 137, 250, 0.2);
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 24rpx;
  color: #999;
}

.info-section {
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #999;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 编辑相关样式 */
.info-value-wrap {
  flex: 1;
  display: flex;
  align-items: center;
}

.info-input {
  flex: 1;
  height: 64rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
}

.info-input.picker {
  line-height: 64rpx;
}

.edit-icon {
  padding: 16rpx;
  margin-left: 8rpx;
}

.action-section {
  display: flex;
  justify-content: center;
  margin-top: 48rpx;
  padding: 0 30rpx;
}

.action-btn {
  margin: 0 16rpx;
}

.action-section button {
  width: 100%;
  font-size: 30rpx;
}
