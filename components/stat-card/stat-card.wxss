.stat-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.trend-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.trend-text {
  font-size: 24rpx;
  font-weight: 600;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-value {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.value-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1;
}

.value-unit {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.stat-title {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
  line-height: 1.2;
} 