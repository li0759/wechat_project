/* pages/profile/index.wxss */

/* CSS Variables - Design System */
page {
  --md-sys-color-primary: #DF76B0;
  --md-sys-color-primary-dark: #C85A9E;
  --md-sys-color-primary-light: rgba(223, 118, 176, 0.1);
  --md-sys-color-surface: #FFFFFF;
  --md-sys-color-surface-variant: #F2F4F7;
  --md-sys-color-on-surface: #1A1D1F;
  --md-sys-color-on-surface-variant: #6F767E;
}

.container {
  display: flex;
  flex-direction: column;
  background-color: #F8F9FB;
  height: 100vh;
  padding-bottom: 100rpx;
  padding-top: 0rpx!important；
}

/* 添加scroll-view样式 */
.scroll-container {
  flex: 1;
  height: calc(100vh - 500rpx); /* 减去头部的高度 */
  padding-top: 20rpx;
}

/* 头部用户信息 */
.header {
  background: linear-gradient(135deg, #DF76B0 0%, #C85A9E 100%);
  width: 500rpx;
  margin-left: 100rpx;
  margin-top: 10rpx;
  color: #FFFFFF;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(223, 118, 176, 0.25);
}

.user-card {
  display: flex;
  flex-direction: row; /* 显式指定flex-direction */
  padding-left:100rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
  color: #FFFFFF;
}

.role {
  font-size: 24rpx;
  opacity: 0.9;
  color: #FFFFFF;
}

.edit-btn {
  padding: 10rpx;
}

/* 数据概览 */
.statistics {
  display: flex;
  flex-direction: row; /* 显式指定flex-direction */
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 5rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

/* 使用真实视图替代伪元素 */
.stat-item-divider {
  position: absolute;
  right: 0;
  top: 15%;
  height: 70%;
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

/* 最后一个元素的分隔线不显示，使用JS控制 */
.stat-item-last .stat-item-divider {
  display: none;
}

.stat-num {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
  color: #FFFFFF;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  color: #FFFFFF;
}

/* 功能列表 */
.function-list {
  min-height: 90vh;
  width: 700rpx;
  padding: 20rpx;
  position: relative;
}

.function-group {
  margin-bottom: 20rpx;
  background-color: var(--md-sys-color-surface);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #E5E7EB;
}

.function-title {
  font-size: 26rpx;
  color: var(--md-sys-color-on-surface-variant);
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #E5E7EB;
  font-weight: 500;
}

.function-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 10rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.function-title-row .function-title {
  padding: 0;
  border-bottom: none;
}

/* Ripple wrapper for title-action */
.function-title-row > ripple {
  display: inline-flex;
  width: 90rpx;
  height: 90rpx;
}

.title-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}


/* 网格布局 */
.function-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0rpx;
}

/* Ripple wrapper - must maintain grid layout */
.function-grid > ripple {
  width: 20%;
  display: block;
}

.grid-item {
  width: 100%;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.grid-icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: linear-gradient(135deg, #EF4444, #DC2626);
  color: #fff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
  font-weight: 600;
  z-index: 10;
}

.grid-text {
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface);
  text-align: center;
  margin-top: 8rpx;
  width: 100%;
}

/* 原列表布局 */
.function-items {
  position: relative;
}

/* Ripple wrapper for function-item */
.function-group > ripple {
  display: block;
  width: 100%;
}

.function-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  position: relative;
  transition: all 0.3s;
}

/* 使用真实视图替代伪元素 */
.function-item-divider {
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1rpx;
  background-color: #E5E7EB;
}

.item-icon {
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.item-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--md-sys-color-on-surface);
}

.item-arrow {
  color: var(--md-sys-color-on-surface-variant);
}

.logout {
  color: #EF4444;
}

/* Remove old active state classes - ripple handles feedback now */

/* 协会管理行 */
.club-management-row {
  padding: 10rpx 0;
}

.club-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF !important;
  padding: 20rpx 30rpx 10rpx;
  background: linear-gradient(135deg, #DF76B0 0%, #C85A9E 100%);
  border-radius: 12rpx;
  margin: 10rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(223, 118, 176, 0.25);
}

.club-divider {
  height: 1rpx;
  background-color: #E5E7EB;
  margin: 10rpx 30rpx;
}

.no-clubs {
  padding: 40rpx 0;
  text-align: center;
  color: var(--md-sys-color-on-surface-variant);
  font-size: 28rpx;
}

/* 活动跟踪 */
.event-tracking-section {
  padding: 20rpx 30rpx;
  background-color: #f9f9f9;
  margin: 10rpx 0;
}

.tracking-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.tracking-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.tracking-item {
  position: relative;
  display: flex;
  flex-direction: row; /* 显式指定flex-direction */
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 最后一个元素的边框不显示，使用JS控制 */
.tracking-item-last {
  border-bottom: none;
}

.tracking-status {
  width: 6rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
}

.status-1 {
  background-color: #4caf50; /* 进行中 */
}

.status-2 {
  background-color: #ff9800; /* 待签到 */
}

.status-3 {
  background-color: #2196f3; /* 待开始 */
}

.tracking-info {
  flex: 1;
  margin-right: 20rpx;
}

.tracking-name {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #333;
}

/* 新增样式 - 活动详情 */
.tracking-details {
  display: flex;
  flex-direction: row; /* 显式指定flex-direction */
  align-items: center;
  flex-wrap: wrap;
  font-size: 12px;
}

.tracking-detail-item {
  display: flex;
  flex-direction: row; /* 显式指定flex-direction */
  align-items: center;
  margin-right: 8px;
}

.slash {
  margin: 0 8px;
  color: #666;
  font-size: 12px;
}

/* 弹窗内容样式 */
.popup-content-wrapper {
  position: relative;
  padding-top:30rpx;
  width: 100%;
  height: 100%;
  background-color: #f7f8fa;
  overflow-y: auto;
}

.popup-skeleton {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  min-height: 100vh;
  z-index: 10;
  padding: 0;
  background: #f7f8fa;
}

.popup-skeleton .skeleton-nav {
  margin-bottom: 20rpx;
}

.popup-skeleton .skeleton-cover {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.popup-skeleton .skeleton-info {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 30rpx 20rpx;
  padding: 30rpx;
}

.popup-skeleton .skeleton-rows {
  margin-bottom: 20rpx;
}

.popup-skeleton .skeleton-cards {
  margin-bottom: 20rpx;
}

.popup-skeleton .skeleton-members {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 30rpx;
  padding: 30rpx;
}
