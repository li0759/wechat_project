.container {
  height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.header {
  display: flex;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.user-info:active .avatar {
  transform: scale(0.95);
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.user-role {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.header-right {
  display: flex;
  align-items: center;
}

.notification-icon {
  position: relative;
  padding: 8rpx;
  margin-left: 20rpx;
}

.notification-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  text-align: center;
  padding: 0 6rpx;
  box-shadow: 0 2rpx 4rpx rgba(255, 77, 79, 0.3);
}

/* 自定义vant Tab组件样式 */
.van-tab {
  flex: 1 !important;
  min-width: 25% !important;
  position: sticky;
}

.van-tabs__wrap {
  background-color: #fff;
}

.van-tab--active {
  font-weight: bold !important;
  color:rgb(223, 118, 176) !important;
}

.van-tabs__line {
  background-color: rgb(223, 118, 176) !important;
  height: 6rpx !important;
  width: 120rpx !important;
  border-radius: 3rpx !important;
}

/* 瀑布流容器 */
.waterfall-container {
  display: flex;
  padding-bottom: 150rpx;
}

.waterfall-column {
  width: 50%;
  padding: 0 8rpx;
}

/* 全宽列布局 - 用于已加活动和已加社团 */
.full-width-column {
  width: 100%;
  padding: 0 8rpx;
}

/* 已加入的项目样式 */
.joined-item {
  margin-bottom: 30rpx;
}

.joined-card {
  display: flex;
  flex-direction: column;
  height: auto;
}

.joined-image {
  width: 100%;
  height: 450rpx !important;
  position: relative;
}

.waterfall-item {
  margin-bottom: 20rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* 图片容器样式 */
.image-container {
  position: relative;
  width: 100%;
}

/* 图片左下角的参加人数样式 */
.image-members-count {
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 30rpx;
  padding: 4rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  z-index: 5;
}

.image-members-count text {
  color: #fff;
  font-size: 22rpx;
}

/* 卡片信息行 - 用于社团名称和时间并排显示 */
.card-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #999;
}

.card-club-name {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.card-club-name text {
  margin-left: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 统一标签基础样式 */
.card-image::before,
.card-image::after {
  position: absolute;
  top: 10rpx;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  z-index: 2;
}

/* 左侧标签（已结束） */
.card-image-ended::before {
  content: "已结束";
  left: 10rpx;
  background: rgba(0,0,0,0.7);
  top: 10rpx;
  position: absolute;
  transform: translateY(0);
}

/* 右侧标签容器 */
.card-image::after {
  right: 10rpx;
  left: auto;
}

/* 已参加 */
.card-image.is-joined::after {
  content: "已参加";
  background: rgb(223, 118, 176) ;
}

/* 我管理 */
.card-image.is-managed::after {
  content: "我管理"; 
  background: rgb(224, 25, 135) ;
}

/* 协会成员 */
.card-image.is-member::after {
  content: "已加入";
  background:rgb(223, 118, 176) ;
}

/* 协会管理 */
.card-image.is-leaded::after {
  content: "我管理"; 
  background: rgb(224, 25, 135) ;
}

.card-image {
  width: 100%;
  height: 260rpx;
  object-fit: cover;
}

.card-content {
  padding: 16rpx 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 72rpx;
}

.card-info {
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  color: #999;
}

.card-location, .card-tag, .card-members {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.card-location van-icon, .card-members van-icon {
  margin-right: 4rpx;
}

/* 空状态 */
.empty-container {
  padding: 60rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

/* 通知栏 */
.notice-section {
  margin: 20rpx 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 功能导航 */
.nav-grid {
  margin: 20rpx 0;
  background-color: #ffffff;
}

/* 加载中和空状态 */
.loading-container, .empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 活动列表样式 */
.event-list {
  display: flex;
  flex-direction: column;
}

.event-item {
  margin-bottom: 24rpx;
}

.event-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
}

/* 协会名称样式 */
.card-club-name {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.card-club-name van-icon {
  margin-right: 4rpx;
}

/* 热门活动区域样式 */
.hot-events-container {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding-left: 10rpx;
  border-left: 8rpx solid rgb(223, 118, 176);
}

.hot-events-swiper {
  height: 400rpx;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.hot-event-card {
  height: 100%;
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

/* 地图背景 - 占据整个容器 */
.hot-event-layout {
  position: relative;
  width: 100%;
  height: 100%;
}

.hot-event-map-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hot-event-map {
  width: 100%;
  height: 100%;
  position: relative;
}

.hot-event-map image {

  width: 1000rpx;
  height: 600rpx;
  position: relative;
  opacity: 0.7;
}

/* 地图中心的地点名称 */
.location-name {
  position: absolute;
  top: 80%;
  left: 70%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #333;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 2;
}

/* 活动封面 - 左上角 */
.hot-event-image-container {
  position: absolute;
  left: 20rpx;
  top: 150rpx;
  width: 300rpx;
  height: 200rpx;
  z-index: 3;
}

.hot-event-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

/* 参与者头像 - 右上角 */
.hot-event-participants {
  position: absolute;
  right: 50rpx;
  top: 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 12rpx 16rpx;
  z-index: 3;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.participants-avatars {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-bottom: 6rpx;
}

.participant-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.more-participants {
  font-size: 20rpx;
  color: #666;
  margin-left: 6rpx;
}

.participants-count {
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

/* 活动信息 - 左下角 */
.hot-event-info {
  position: absolute;
  left: 50rpx;
  top: 0rpx;
  width: 300rpx;
  z-index: 3;
}

.hot-event-title {
  font-size: 36rpx;
  font-weight: 800;
  color: black;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hot-event-description {
  font-size: 24rpx;
  color: black;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hot-event-time {
  font-size: 24rpx;
  color: black;
}

/* 热门社团轮播样式 */
.hot-clubs-container {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}

.hot-clubs-swiper {
  height: 430rpx;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.hot-club-card {
  height: 100%;
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
  position: relative;
  overflow: hidden;
}

.hot-club-layout {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 社团背景 - 改为灰色调 */
.hot-club-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hot-club-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.3;
}

.hot-club-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(247, 247, 247, 0.5), rgba(223, 220, 206, 0.6));
}

/* 协会名称和简介 - 左上角，无背景框 */
.hot-club-info {
  position: absolute;
  left: 12rpx;
  top: 12rpx;
  width: 280rpx;
  z-index: 3;
}

.hot-club-name {
  font-size: 36rpx;
  font-weight: 800;
  color: black;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hot-club-description {
  font-size: 22rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.club-stats {
  display: flex;
  align-items: center;
}

.stat-item {
  font-size: 18rpx;
  color: #6c757d;
  background-color: #f8f9fa;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border-left: 3rpx solid #6c757d;
}

/* 协会会长信息 - 左中 */
.hot-club-leader {
  position: absolute;
  left: 200rpx;
  top: 90rpx;
  transform: translateY(-50%);
  width: 280rpx;
  z-index: 3;
}

.leader-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.leader-avatar-container {
  position: relative;
  width: 72rpx;
  height: 72rpx;
}

.leader-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.leader-name-overlay {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(255, 255, 255, 0.9);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  min-width: 60rpx;
  text-align: center;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.leader-name {
  font-size: 20rpx;
  color: #333;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 80rpx;
}

.leader-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.leader-title {
  font-size: 24rpx;
  color: #666;
  line-height: 1;
}

/* 协会会员信息 - 左下 */
.hot-club-members {
  position: absolute;
  left: 24rpx;
  bottom: 24rpx;
  width: 200rpx;
  z-index: 3;
}

.member-row {
  display: flex;
  align-items: center;
  gap: 2rpx;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
}

.member-avatar-container {
  position: relative;
  width: 64rpx;
  height: 64rpx;
}

.member-row-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
}

.member-name-overlay {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(255, 255, 255, 0.9);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  min-width: 50rpx;
  text-align: center;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.member-row-name {
  color: #333;
  font-size: 18rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 70rpx;
}

/* 隐藏不使用的样式 */
.members-avatars-list,
.member-avatar,
.more-members {
  display: none;
}

/* 最新活动列表 - 右侧全部区域 */
.hot-club-events {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  width: 300rpx;
  z-index: 3;
}

.recent-events-list {
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0;
}

.recent-event-item, .recent-event-placeholder {
  padding: 0;
}

.event-item-content, .placeholder-content {
  display: flex;
  align-items: center;
  padding: 0;
  gap: 0;
}

/* 封面活动样式 */
.event-cover-container {
  position: relative;
  width: 100%;
  height: 230rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.event-cover {
  width: 100%;
  height: 230rpx;
  border-radius: 8rpx;
  object-fit: cover;
  flex-shrink: 0;
}
.event-text-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 8rpx 12rpx 6rpx 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  min-width: 0;
}

.event-title {
  font-size: 22rpx;
  color: #333;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  margin-right: 8rpx;
}

.event-time {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.placeholder-text {
  font-size: 20rpx;
  color: #999;
  font-style: italic;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  margin-right: 8rpx;
}

.placeholder-time {
  font-size: 18rpx;
  color: #ccc;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 纯文字活动样式 */
.event-text-only {
  background-color: rgba(255, 255, 255, 0.9);
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.event-title-only {
  font-size: 22rpx;
  color: #333;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  margin-right: 8rpx;
}

.event-time-only {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.placeholder-text-only {
  font-size: 20rpx;
  color: #999;
  font-style: italic;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  margin-right: 8rpx;
}

.placeholder-time-only {
  font-size: 18rpx;
  color: #ccc;
  white-space: nowrap;
  flex-shrink: 0;
}

.image-placeholder {
  background-color: #f0f0f0;
}






