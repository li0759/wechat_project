/* pages/home/notifications/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
}

/* 标签页内容 */
.tab-content {
  min-height: calc(100vh - 200rpx);
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  padding: 100rpx 0;
}

/* 通知列表 */
.notice-list {
  padding: 20rpx 0;
}

.notice-item {
  display: flex;
  padding: 30rpx;
  margin-bottom: 2rpx;
  background-color: #fff;
  position: relative;
}

.notice-item.unread {
  background-color: #f0f9ff;
}

.notice-icon {
  position: relative;
  margin-right: 20rpx;
}

.icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.club-icon {
  background-color: #1890ff;
}

.event-icon {
  background-color: #52c41a;
}

.system-icon {
  background-color: #faad14;
}

.unread-dot {
  position: absolute;
  top: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
}

.notice-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.notice-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.notice-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

/* 按下效果 */
.notice-item:active {
  background-color: #f5f5f5;
} 