  max-height: 860rpx;
}
.popup-shell .search-results {
  max-height: 900rpx;
}




/* =========================
 * 添加成员全屏弹窗（am- 前缀，对齐 club-members）
 * ========================= */
.am-sheet {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: var(--md-sys-color-surface);
  box-sizing: border-box;
}

.am-body {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.am-tab-panel {
  height: 100%;
  min-height: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.am-search {
  padding: 14rpx 16rpx;
  border-bottom: 1rpx solid #E5E7EB;
  flex-shrink: 0;
  background: var(--md-sys-color-surface);
}

.am-results {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.am-results-head {
  padding: 14rpx 16rpx 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-shrink: 0;
}

.am-results-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
}

.am-results-count {
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  background: var(--md-sys-color-primary-light);
  color: var(--md-sys-color-primary);
  font-size: 22rpx;
  font-weight: 600;
}

.am-results-scroll {
  flex: 1;
  min-height: 0;
  padding: 12rpx 16rpx 28rpx;
  box-sizing: border-box;
}

.am-user-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--md-sys-color-surface);
  border-radius: 16rpx;
  border: 1rpx solid #E5E7EB;
  box-shadow: var(--md-sys-elevation-1);
  padding: 16rpx 16rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
  transition: all 0.3s;
}

.am-user-row:active {
  border-color: var(--md-sys-color-primary);
  box-shadow: var(--md-sys-elevation-2);
  transform: scale(0.99);
}

.am-user-row-compact {
  box-shadow: none;
  border-radius: 14rpx;
}

.am-user-left {
  display: flex;
  align-items: center;
  gap: 14rpx;
  min-width: 0;
  flex: 1;
}

.am-avatar-trigger {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  overflow: hidden;
}

.am-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: var(--md-sys-color-surface-variant);
}

.am-user-text {
  min-width: 0;
  flex: 1;
}

.am-user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.am-user-meta {
  margin-top: 6rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  min-height: 28rpx;
}

.am-meta {
  font-size: 22rpx;
  color: #6F767E;
  background: var(--md-sys-color-surface-variant);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.am-user-phone {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #9A9FA5;
}

.am-user-right {
  flex-shrink: 0;
  padding-left: 10rpx;
}

.am-icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  background: var(--md-sys-color-primary-light);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.am-icon-btn:active {
  background: rgba(223, 118, 176, 0.2);
  transform: scale(0.95);
}

.am-icon-ok {
  background: #D1FAE5;
}

.am-icon-ok:active {
  background: #A7F3D0;
}

.am-empty {
  padding: 60rpx 0;
}

.am-empty-pad {
  padding: 80rpx 0;
}

/* 用户详情弹窗 */
.am-user-detail {
  position: relative;
  z-index: 10;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  background: var(--md-sys-color-surface);
  border-radius: 16rpx;
  box-sizing: border-box;
}

.am-detail-head {
  display: flex;
  align-items: center;
  gap: 18rpx;
  padding-bottom: 14rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.am-detail-avatar {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  background: var(--md-sys-color-surface-variant);
  border: 2rpx solid #E5E7EB;
}

.am-detail-main {
  flex: 1;
  min-width: 0;
}

.am-detail-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.am-detail-tags {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.am-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  line-height: 1.2;
  font-weight: 500;
}

.am-tag-dept {
  color: var(--md-sys-color-primary);
  background: var(--md-sys-color-primary-light);
}

.am-tag-pos {
  color: #10B981;
  background: #D1FAE5;
}

.am-detail-kv {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.am-kv {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F2F4F7;
}

.am-kv:last-child {
  border-bottom: none;
}

.am-k {
  font-size: 26rpx;
  color: #9A9FA5;
  font-weight: 500;
}

.am-v {
  font-size: 26rpx;
  color: var(--md-sys-color-on-surface);
  font-weight: 600;
  max-width: 420rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.am-detail-actions {
  padding-top: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.am-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 14rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1;
  box-sizing: border-box;
  transition: all 0.3s;
}

.am-btn-primary {
  background: var(--md-sys-color-primary-light);
  color: var(--md-sys-color-primary);
}

.am-btn-primary:active {
  background: rgba(223, 118, 176, 0.2);
  transform: scale(0.98);
}

.am-added {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #10B981;
}

/* 全部用户（通讯录） */
.am-ab-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
}

.am-ab-nav {
  flex-shrink: 0;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  border-bottom: 1rpx solid #E5E7EB;
  background: var(--md-sys-color-surface);
}

.am-back {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  background: var(--md-sys-color-surface-variant);
  color: var(--md-sys-color-on-surface);
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.am-back:active {
  background: #E5E7EB;
  transform: scale(0.98);
}

.am-path {
  flex: 1;
  min-width: 0;
  font-size: 24rpx;
  color: #6F767E;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.am-ab {
  padding: 12rpx 16rpx 28rpx;
  box-sizing: border-box;
}

.am-ab-users {
  padding: 8rpx 0 6rpx;
}

.am-dept {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--md-sys-color-surface);
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
  padding: 24rpx 16rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
  transition: all 0.3s;
}

.am-dept:active {
  background: var(--md-sys-color-surface-variant);
  border-color: var(--md-sys-color-primary);
  transform: scale(0.99);
}

.am-dept-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 460rpx;
}

.am-dept-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-shrink: 0;
}

.am-dept-count {
  font-size: 22rpx;
  font-weight: 600;
  color: #6F767E;
  background: var(--md-sys-color-surface-variant);
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
}

.am-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 18rpx 16rpx;
  color: #9A9FA5;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.am-hint-text {
  color: #9A9FA5;
  font-size: 24rpx;
}

.member-requirement-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: var(--md-sys-color-primary);
  padding: 0 18rpx;
}

.footer-space {
  height: 200rpx;
}
