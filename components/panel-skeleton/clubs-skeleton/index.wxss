/* 骨架屏容器 */
.skeleton-container {
  padding: 24rpx;
  padding-top: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 骨架屏列表 */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 协会卡片骨架 */
.skeleton-club-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 协会头部骨架（协会名称行） */
.skeleton-club-header {
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 协会内容骨架 */
.skeleton-club-content {
  display: flex;
  gap: 12rpx;
}

/* 协会信息骨架 */
.skeleton-club-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
