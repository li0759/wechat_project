/* club-overview-panel 组件样式 - 对齐设计系统规范 */
.club-overview-panel {
  --md-sys-color-primary: #DF76B0;
  --md-sys-color-primary-dark: #C85A9E;
  --md-sys-color-primary-light: rgba(223, 118, 176, 0.1);
  --md-sys-color-on-primary: #ffffff;
  --md-sys-color-surface: #FFFFFF;
  --md-sys-color-on-surface: #1A1D1F;
  --md-sys-color-surface-variant: #F2F4F7;
  --md-sys-color-on-surface-variant: #6F767E;
  --md-sys-color-background: #F8F9FB;
  --md-sys-elevation-1: 0 2rpx 4rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  --md-sys-elevation-2: 0 4rpx 8rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  --md-sys-shape-corner-medium: 16rpx;
  width: 100%;
  height: 100vh;
  background: var(--md-sys-color-background);
  display: flex;
  color: var(--md-sys-color-on-surface);
}

.overview-scroll {
  width: 100%;
  height: 100vh;
}

/* 协会列表 */
.club-list {
  padding: 20rpx;
}

.club-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: var(--md-sys-shape-corner-medium);
  box-shadow: var(--md-sys-elevation-1);
  background:var(--md-sys-color-background);
  height: 380rpx;
  overflow: hidden;
}

/* 左侧协会信息 */
.club-info {
  width: 200rpx;
  height: 380rpx;  /* 明确高度，与 club-item 一致 */
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  border-radius: 12rpx;
  overflow: hidden;
}

.club-cover {
  width: 100%;
  height: 250rpx;
  background: var(--md-sys-color-surface-variant);
  display: block;
  flex-shrink: 0;
}

.club-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 12rpx 0;
}

.club-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.club-desc {
  font-size: 22rpx;
  color: var(--md-sys-color-on-surface-variant);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 右侧活动列表 */
.club-events {
  flex: 1;
  position: relative;
  overflow: hidden;
  border-radius: 12rpx;
}

.events-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 12rpx;
}

.loading-text {
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface-variant);
  margin-top: 8rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface-variant);
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.no-more text {
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface-variant);
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
}

/* 嵌套弹窗样式 */
.nested-popup-shell {
  width: 100%;
  height: 100%;
  position: relative;
}
