<view class="stat-card" bind:tap="onTap">
  <view class="card-header">
    <view class="icon-wrapper" style="background-color: {{color}}">
      <van-icon name="{{icon}}" size="28rpx" color="#fff" />
    </view>
    <view class="trend-indicator" wx:if="{{trend !== 0}}">
      <van-icon 
        name="{{trend > 0 ? 'arrow-up' : 'arrow-down'}}" 
        size="24rpx" 
        color="{{trend > 0 ? '#07c160' : '#ee0a24'}}" 
      />
      <text class="trend-text" style="color: {{trend > 0 ? '#07c160' : '#ee0a24'}}">
        {{Math.abs(trend)}}%
      </text>
    </view>
  </view>
  
  <view class="card-content">
    <view class="stat-value">
      <text class="value-number">{{displayValue}}</text>
      <text class="value-unit" wx:if="{{unit}}">{{unit}}</text>
    </view>
    <view class="stat-title">{{title}}</view>
  </view>
</view> 