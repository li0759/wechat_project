/* pages/profile/club-members/index.wxss */
.container {
  min-height: 100vh;
  padding-top: 180rpx; /* 为自定义导航栏和搜索栏留出空间 */
  background-color: #f7f8fa;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  padding-top: 80rpx; /* 状态栏高度 */
  background-color: #ffffff;
  display: flex;
  align-items: center;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.nav-title {
  flex: 1;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header-subtitle {
  display: flex;
  align-items: center;
}

.total-count {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

/* 搜索栏 */
.search-container {
  padding: 24rpx 32rpx;
  background-color: #ffffff;
}

/* 内联搜索栏 (在 t-indexes 上方) */
.search-container-inline {
  padding: 16rpx 32rpx;
  background-color: #ffffff;
  position: fixed;
  display: flex;
  align-items: center;
  top: 180rpx; /* 导航栏下方 */
  left: 0;
  right: 0;
  z-index: 10;
}

/* 成员列表容器 */
.members-list-container {
  min-height: calc(100vh);
}

/* 索引成员列表（简洁视图 + 展开容器） */
.member-item-wrapper {
  margin: 0 24rpx 24rpx;
}

.member-item-trigger {
  display: block;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 16rpx;
  overflow: hidden;
}

.member-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  width:620rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.member-trigger-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.member-avatar-expandable,
.avatar-expandable {
  flex-shrink: 0;
}

.member-avatar-trigger,
.avatar-trigger {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.member-avatar-trigger:active,
.avatar-trigger:active {
  transform: scale(0.96);
}

.avatar-expand-hint {
  font-size: 20rpx;
  color: #9e9e9e;
}

.member-trigger-info {
  flex: 1;
  min-width: 0;
}

.member-trigger-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.current-badge {
  flex-shrink: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.member-role-chip {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  background: rgba(158, 158, 158, 0.15);
  color: #666;
}

.member-role-chip.president {
  background: rgba(255, 107, 157, 0.15);
  color: #ff6b9d;
}

.member-role-chip.vice_president {
  background: rgba(255, 193, 7, 0.15);
  color: #ffc107;
}

.member-role-chip.director {
  background: rgba(33, 150, 243, 0.15);
  color: #2196f3;
}

.member-role-chip.member {
  background: rgba(158, 158, 158, 0.15);
  color: #9e9e9e;
}

.member-meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.member-meta-chip {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.12);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.member-position-chip {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.12);
}

.member-phone-row {
  margin-top: 8rpx;
}

.member-phone-compact {
  font-size: 24rpx;
  color: #666666;
}

.role-badge-large {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.role-badge-large.president {
  background: rgba(255, 107, 157, 0.15);
  color: #ff6b9d;
}

.role-badge-large.vice_president {
  background: rgba(255, 193, 7, 0.15);
  color: #ffc107;
}

.role-badge-large.director {
  background: rgba(33, 150, 243, 0.15);
  color: #2196f3;
}

.role-badge-large.member {
  background: rgba(158, 158, 158, 0.15);
  color: #9e9e9e;
}

/* 成员详细信息 */
.member-expanded-content {
  z-index: 1000;
  position: relative;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}

.member-expanded-header {
  display: flex;
  gap: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.member-expanded-info {
  flex: 1;
  min-width: 0;
}

.member-expanded-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.member-expanded-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.member-expanded-meta {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #666;
}

.member-expanded-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 8rpx 0 4rpx;
}

.member-detail-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #444;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.member-detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  color: #999;
}

.detail-value {
  color: #333;
  font-weight: 500;
}

.participation-text {
  color: #667eea;
  font-weight: 500;
}

/* 操作按钮区域 (平铺) */
.member-actions-expanded {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.action-btn.role-change {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.action-btn.remove {
  background: rgba(255, 107, 157, 0.1);
  color: #ff6b9d;
}

.action-btn-hover {
  background: rgba(102, 126, 234, 0.2);
  color: #5367d6;
}

.action-btn-remove-hover {
  background: rgba(255, 107, 157, 0.2);
  color: #be185d;
}

/* 当前用户提示 */
.current-user-tip {
  padding: 16rpx 0 0;
  border-top: 1rpx solid #f0f0f0;
  text-align: center;
}

.current-user-tip text {
  font-size: 24rpx;
  color: #999999;
}

/* 悬浮添加按钮容器 */
.fab-container {
  position: fixed;
  right: 32rpx;
  bottom: 100rpx;
  z-index: 100;
}

/* 悬浮添加按钮 */
.fab-add {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background:rgb(211, 211, 211);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab-add:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.6);
}

/* 展开内容样式 */

.form-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 24rpx 28rpx;
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 160rpx;
}

.form-input::placeholder,
.form-textarea::placeholder {
