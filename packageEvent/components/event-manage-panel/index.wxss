.action-btn.primary {
  background: linear-gradient(135deg, var(--md-sys-color-primary) 0%, var(--md-sys-color-primary-dark) 100%);
  color: #fff;
  padding: 0 32rpx;
  min-width: 160rpx;
  box-shadow: 0 4rpx 12rpx rgba(223, 118, 176, 0.25);
}

.action-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(223, 118, 176, 0.3);
}

.action-btn.danger {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: #fff;
  padding: 0 32rpx;
  min-width: 160rpx;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.25);
}

.action-btn.danger:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.3);
}

.action-btn.tertiary {
  background: transparent;
  color: #EF4444;
  border: 1rpx solid #FEE2E2;
  padding: 0 24rpx;
  min-width: 100rpx;
}

.action-btn.tertiary:active {
  background: #FEE2E2;
  transform: scale(0.98);
}

/* 移除原生 button 的边框 */
.action-btn.secondary::after,
.action-btn.primary::after,
.action-btn.danger::after,
.action-btn.tertiary::after {
  border: none;
}


.members-toolbar { display: flex; align-items: center; justify-content: space-between; gap: 16rpx; margin-bottom: 32rpx; }
.members-toolbar .hint { font-size: 31rpx; color: var(--md-sys-color-on-surface-variant); }

/* 成员排序栏样式 */
.member-sort-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.sort-option {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: var(--md-sys-color-on-surface-variant);
  background: var(--md-sys-color-surface-variant);
  transition: all 0.2s;
  border: 1rpx solid transparent;
}

.sort-option.active {
  background: var(--md-sys-color-primary);
  color: #FFFFFF;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(223, 118, 176, 0.25);
}

.sort-option:active {
  transform: scale(0.96);
}

/* 分享按钮样式 */
.share-button {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 24rpx;
  font-size: 28rpx;
  color: var(--md-sys-color-primary);
  background: transparent;
  border: 1rpx solid var(--md-sys-color-primary);
  border-radius: 12rpx;
  line-height: 1;
  transition: all 0.2s;
}

.share-button:active {
  background: var(--md-sys-color-primary-light);
}

.share-button::after {
  border: none;
}
