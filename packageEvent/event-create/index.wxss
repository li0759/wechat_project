/* 活动创建页 - 简洁现代化设计 */
page {
  background: linear-gradient(135deg, #fdf8fd 0%, #f9f4f9 100%);
  min-height: 100vh;
}

/* 基础容器 */
.modern-container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}


/* 主滚动区域 */
.main-scroll {
  flex: 1;
  padding-top: calc(88rpx + env(safe-area-inset-top));
  padding-bottom: 140rpx;
}

/* 信息展示区 */
.info-section {
  padding: 0 24rpx 24rpx;
}

/* 卡片通用样式 */
.card {
  margin-bottom: 24rpx;
}

/* 创建信息卡片 */
.create-info-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

/* 创建信息网格 */
.create-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

/* 信息项基础样式 */
.create-info-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
  min-height: 80rpx;
}

.create-info-item:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #fce7f3, #fbcfe8);
}

/* 单个块 */
.create-info-item.single-block {
  grid-column: span 1;
}

/* 双倍宽度 */
.create-info-item.double-width {
  grid-column: span 2;
}

/* 双倍高度 */
.create-info-item.double-height {
  min-height: 160rpx;
  align-items: flex-start;
}

.create-info-content {
  flex: 1;
  min-width: 0;
}

.create-info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.create-info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  word-break: break-all;
  line-height: 1.4;
}

.create-info-value.description-text {
  font-size: 26rpx;
  line-height: 1.5;
  max-height: 120rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

/* 图片上传卡片 */
.image-upload-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.card-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.image-count {
  font-size: 24rpx;
  color: #666;
  background: rgba(255, 107, 157, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.image-tip {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: rgba(255, 107, 157, 0.05);
  border-radius: 12rpx;
  border-left: 4rpx solid #ff6b9d;
}

/* 地点卡片 */
.location-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.location-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 157, 0.1);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ff6b9d;
  transition: all 0.3s ease;
}

.location-btn:active {
  background: rgba(255, 107, 157, 0.2);
}

.location-input-container {
  margin-top: 20rpx;
}

.selected-location {
  margin-top: 20rpx;
}

.location-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.location-address {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.location-map {
  margin: 16rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

.location-actions {
  margin-top: 16rpx;
}

/* 操作区 */
.action-section {
  margin-top: 40rpx;
  padding: 0 24rpx;
  margin-bottom: 40rpx;
}

.actions-container {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  min-height: 88rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d, #ec4899);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.3);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  color: #6b7280;
  box-shadow: 0 8rpx 32rpx rgba(229, 231, 235, 0.3);
}

.action-btn.secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(229, 231, 235, 0.4);
}

.action-btn.disabled {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  color: #9ca3af;
  box-shadow: none;
  opacity: 0.6;
}

.action-btn.disabled:active {
  transform: none;
}

/* 弹窗样式 */
.popup-container {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  min-height: 35vh;
  overflow-y: auto;
}

/* 图片管理弹窗特殊样式 */
.image-popup .popup-container {
  height: 50vh;
  display: flex;
  flex-direction: column;
}

.drag-container {
  flex: 1;
  min-height: 0;
  overflow: hidden;
}

.drag-img-container {
  height: 50%;
  padding-bottom: 120rpx; /* 留出按钮空间 */
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.1);
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.popup-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  flex: 1;
  min-height: 0;
}

/* 图片管理弹窗内容区域 */
.image-popup .popup-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
}

.popup-body {
  padding: 0;
  max-height: none;
  overflow: visible;
}

.popup-footer {
  padding: 0;
  border-top: none;
}

/* 表单项样式 */
.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.form-input {
  padding: 20rpx 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.form-input:active {
  border-color: #ff6b9d;
  background: #fdf2f8;
}

.form-input .has-value {
  color: #1f2937;
}

.form-input .placeholder {
  color: #9ca3af;
}

/* 图片弹窗样式 */
.images-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 107, 157, 0.05);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #ff6b9d;
  flex-shrink: 0;
}

/* 弹窗操作按钮样式 */
.popup-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.popup-actions .action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
}

.popup-actions .action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
}

.popup-actions .action-btn.primary:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #ff5a8a, #ff7d9a);
}

.popup-actions .action-btn.danger {
  background: linear-gradient(135deg, #ff4757, #ff6b7a);
  color: white;
}

.popup-actions .action-btn.danger:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #ff3742, #ff5a6b);
}

.popup-actions .action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.popup-actions .action-btn.secondary:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.popup-actions .action-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 地点弹窗样式 */
.location-popup .popup-container {
  max-height: 80vh;
}

.location-popup .popup-content {
  padding: 24rpx 32rpx 32rpx;
}

.location-popup .form-item {
  margin-bottom: 32rpx;
}

.location-popup .form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.location-popup .location-input {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
}

.location-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  min-height: 80rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.location-picker:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.location-picker .placeholder {
  color: #999;
  font-size: 28rpx;
}

.location-picker .has-value {
  color: #333;
  font-size: 26rpx;
  line-height: 1.4;
}

/* 简介编辑弹窗样式 */
.content-popup .popup-container {
  max-height: 80vh;
}

.content-popup .popup-content {
  padding: 24rpx 32rpx 32rpx;
}

/* 动画效果 */
.fade-in-up {
  animation: fadeInUp 0.6s ease-out;
}

.fade-in-up-delay-1 {
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.fade-in-up-delay-2 {
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.fade-in-up-delay-3 {
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 拖拽图片组件样式覆盖 */
.drag-img-container {
  margin-top: 20rpx;
}

.drag-img-item {
  border-radius: 12rpx !important;
  overflow: hidden !important;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .create-info-grid {
    grid-template-columns: 1fr;
  }
  
  .create-info-item.double-width {
    grid-column: span 1;
  }
  
  .schedule-popup .popup-content {
    padding: 20rpx 24rpx 24rpx;
  }
  
  .form-section {
    margin-bottom: 24rpx;
  }
  
  .section-title {
    font-size: 26rpx;
  }
}

/* 日程弹窗样式 */
.schedule-popup .popup-container {
  max-height: 85vh;
}

.schedule-popup .popup-content {
  padding: 24rpx 32rpx 32rpx;
}

/* 表单区域 */
.form-section {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 单选框组样式 */
.form-section van-radio-group {
  display: flex;
  gap: 24rpx;
}

/* 日期选择器容器 */
.date-selector {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx;
}

.selector-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.selector-trigger:active {
  background: #e9ecef;
  border-color: #ff6b9d;
}

.selector-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 时间选择器 */
.time-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.time-selector:active {
  background: #e9ecef;
}

.time-display {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 滑块容器 */
.slider-container {
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.slider-label {
  display: block;
  text-align: center;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 操作按钮 */
.popup-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.action-btn.secondary:active {
  background: #e9ecef;
}

.action-btn.primary {
  background: #ff6b9d;
  color: #fff;
}

.action-btn.primary:active {
  background: #e55a87;
  transform: scale(0.98);
}

.selector-title {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
  text-align: center;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .period-selector-container {
    padding: 20rpx;
    gap: 20rpx;
  }
  
  .weekday-grid {
    gap: 8rpx;
  }
  
  .weekday-item {
    min-height: 50rpx;
  }
  
  .weekday-text {
    font-size: 22rpx;
  }
  
  .monthday-grid {
    gap: 6rpx;
    max-height: 250rpx;
  }
  
  .monthday-item {
    min-height: 40rpx;
  }
  
  .monthday-text {
    font-size: 20rpx;
  }
}

/* 预计结束时间显示样式 */
.end-time-display {
  padding: 20rpx 24rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  border: 2rpx solid #e0f2fe;
}

.end-time-text {
  font-size: 28rpx;
  color: #0369a1;
  font-weight: 600;
  text-align: center;
  display: block;
}