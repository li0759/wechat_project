/* 页面基础样式 */
page {
  background-color: #fff;
  color: #333;
}

/* 页面主容器 */
.event-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f8fa;
}

/* 活动列表滚动区域 */
.events-scroll {
  flex: 1;
  height: 100vh;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* 活动容器 */
.events-container {
  padding: 24rpx;
  min-height: 60vh;
}

/* 活动列表 */
.events-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 活动项 */
.event-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #E5E7EB;
  position: relative;
  transition: all 0.3s;
}

.event-item:active {
  border-color: #DF76B0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  transform: scale(0.99);
}

/* 活动上部分：协会名称 */
.event-club-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.club-name {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 活动下部分：左边封面 + 右边信息 */
.event-main-content {
  display: flex;
  gap: 12rpx;
}

.event-cover-wrapper {
  flex-shrink: 0;
}

.event-info-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  justify-content: flex-start;
}

.event-title {
  font-size: 28rpx;
  line-height: 1.3;
  color: #1A1D1F;
  font-weight: 600;
  word-break: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.event-time {
  font-size: 22rpx;
  color: #6F767E;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.event-description {
  font-size: 22rpx;
  color: #6F767E;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 事件状态标签 */
.event-status {
  display: flex;
  gap: 8rpx;
}

.status-tag {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: white;
}

.status-tag.prego {
  background: #3B82F6;
}

.status-tag.going {
  background: #10B981;
}

.status-tag.ended {
  background: #9A9FA5;
}

.status-tag.cancelled {
  background: #EF4444;
}

.status-tag.club-deleted {
  background: #6F767E;
}

/* 灰色蒙层效果 */
.event-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  pointer-events: none;
}

.event-overlay text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 8rpx;
}

/* ========== 骨架屏样式 ========== */

.event-skeleton {
  /* 不设置背景，继承 event-item 的背景 */
}

/* 协会名称骨架 */
.skeleton-club-header {
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.skeleton-club-name {
  width: 180rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #e0e0e0 25%, #f0f0f0 50%, #e0e0e0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

/* 主内容骨架 */
.skeleton-main-content {
  display: flex;
  gap: 16rpx;
}

/* 封面骨架 */
.skeleton-cover {
  width: 220rpx;
  height: 220rpx;
  background: linear-gradient(90deg, #e0e0e0 25%, #f0f0f0 50%, #e0e0e0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 12rpx;
  flex-shrink: 0;
}

/* 信息骨架 */
.skeleton-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-text-line {
  height: 24rpx;
  background: linear-gradient(90deg, #e0e0e0 25%, #f0f0f0 50%, #e0e0e0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  width: 100%;
}

.skeleton-text-line.short {
  width: 70%;
}

@keyframes skeleton-loading {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
  margin-top: 24rpx;
  color: #999;
}

.empty-desc {
  font-size: 26rpx;
  margin-top: 8rpx;
  color: #ccc;
}

/* 加载状态 */
.loading-events {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 40rpx;
}

/* Vant Tabs 样式覆盖 */
.van-tab {
  flex: 1 !important;
  min-width: 25% !important;
}

.van-tabs__wrap {
  background-color: #fff;
}

.van-tab--active {
  font-weight: bold !important;
  color: rgb(223, 118, 176) !important;
}

.van-tabs__line {
  background-color: rgb(223, 118, 176) !important;
  height: 6rpx !important;
  width: 120rpx !important;
  border-radius: 3rpx !important;
}

/* 日历容器 */
.calendar-container {
  background-color: #fff;
  min-height: 90vh;
  position: relative;
  padding-bottom: 20px;
}

/* 日历无数据提示 */
.calendar-empty-tip {
  text-align: center;
  color: #999;
  font-size: 14px;
  padding: 20px 0;
}

/* 添加加载更多按钮样式 */
.load-more-container {
  display: flex;
  justify-content: center;
  padding: 30rpx 0 50rpx;
}

.load-more-btn {
  width: 240rpx !important;
  height: 70rpx !important;
  border-radius: 35rpx !important;
  color: #666 !important;
  font-size: 28rpx !important;
  font-weight: normal !important;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1) !important;
  border: 1px solid #eee !important;
  background-color: #fff !important;
}

/* 按钮禁用状态 */
.load-more-btn.van-button--disabled {
  color: #999 !important;
  background-color: #f5f5f5 !important;
}

/* 图标样式 */
.load-more-btn .van-icon {
  font-size: 28rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

/* 月份显示占位符，防止内容被遮挡 */
.month-display-placeholder {
  height: 70rpx; /* 与fixed-month-display高度匹配 */
  width: 100%;
  margin-bottom: 10rpx;
}

/* 删除状态的活动卡片样式 */
.event-deleted {
  opacity: 0.8;
  filter: grayscale(0.3);
  background-color: #f8f8f8;
}

.event-deleted .card-title {
  color: #666666;
}

.event-deleted .card-tag text,
.event-deleted .card-location text {
  color: #777777;
}

.event-deleted .joined-image {
  filter: grayscale(0.5);
  opacity: 0.7;
}

/* 状态标签层 */
.status-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 10;
  display: flex;
  justify-content: flex-end;
  padding: 16rpx;
}

/* 右侧标签组 */
.status-right-group {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

/* 状态标签基础样式 - 删除状态和管理状态专用 */
.status-deleted {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: white;
  z-index: 11;
  pointer-events: none;
  background: linear-gradient(135deg, #999999 0%, #666666 100%);
  box-shadow: 0 2rpx 8rpx rgba(153, 153, 153, 0.3);
}

/* 管理状态标签 */
.status-managed {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.3);
} 


/* ========== 内联骨架屏样式 ========== */

.inline-skeleton-card {
  /* 继承 event-item 的样式 */
}

.inline-skeleton-header {
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.inline-skeleton-content {
  display: flex;
  gap: 12rpx;
}

.inline-skeleton-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* ========== 嵌套弹窗样式 ========== */

.nested-popup-shell {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
