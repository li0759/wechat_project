.skeleton-container {
  padding-top: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.skeleton-header {
  background: #fff;
  padding: 20rpx 32rpx 32rpx;
  margin-bottom: 0;
}

.skeleton-tabs-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20rpx;
}

.skeleton-tab-left,
.skeleton-tab-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
}

.skeleton-date {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
}

.skeleton-timeline {
  padding: 20rpx 16rpx;
  display: flex;
  gap: 0;
}

.skeleton-timeline-column {
  flex: 1;
  width: 50%;
}

.skeleton-column-left {
  padding-right: 8rpx;
}

.skeleton-column-right {
  padding-left: 8rpx;
}

.skeleton-timeline-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.skeleton-item-content {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.skeleton-item-image {
  flex-shrink: 0;
}

.skeleton-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
