.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 主题色定义 */
:root {
  --primary-color: rgb(223, 118, 176);
}

.applications-list {
  padding-bottom: 30rpx;
}

.application-item {
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.van-empty {
  padding: 60rpx 0;
}

/* 状态颜色 */
.status-pending {
  color: #faad14 !important;
  font-weight: bold;
}

.status-approved {
  color: rgb(223, 118, 176) !important;
  font-weight: bold;
}

.status-rejected {
  color: #f5222d !important;
  font-weight: bold;
}

.status-row {
  background-color: #fff;
} 