/* 基础变量 */
:root {
  --primary: rgb(223, 118, 176);
  --primary-light: rgba(223, 118, 176, 0.15);
  --primary-medium: rgba(223, 118, 176, 0.3);
  --primary-dark: rgb(183, 98, 146);
  --gradient-blue: linear-gradient(135deg, rgb(223, 118, 176) 0%, rgb(243, 158, 206) 100%);
  --text-dark: #333333;
  --text-medium: #666666;
  --text-light: #999999;
  --bg-color: #fff;
  --bg-light: #f7fafe;
  --border-radius: 16rpx;
  --shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 页面主容器 */
.club-container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 20rpx;
}

/* 协会列表 */
.club-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 协会卡片项 */
.club-item {
  background-color: #fff;
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--shadow);
  position: relative;
  height: 240rpx;
}

/* 状态标签层 */
.status-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  padding: 12rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  color: white;
}

.status-left {
  align-self: flex-start;
}

.status-right {
  align-self: flex-end;
}

.status-managed {
  background-color: rgb(223, 118, 176);
}

.status-joined {
  background-color: rgb(223, 118, 176);
}

/* 申请状态标签 */
.status-approved {
  background-color: #07c160;
}

.status-rejected {
  background-color: #ee0a24;
}

.status-pending {
  background-color: #ff976a;
}

/* 协会封面图 */
.club-cover {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
}

/* 协会信息区域 */
.club-info {
  padding: 24rpx;
}

/* 协会内容区域 - 横向布局 */
.club-content {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  height: 100%;
}

.club-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  margin-right: 20rpx;
  padding-bottom: 10rpx;
}

.club-right {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.club-logo {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}

.club-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 12rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.club-detail {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  gap: 12rpx;
}

.club-description {
  font-size: 26rpx;
  color: var(--text-medium);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 12rpx;
}

/* 会长信息样式 */
.club-leader {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.leader-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  object-fit: cover;
}

.leader-name {
  font-size: 24rpx;
  color: var(--text-light);
}

.club-members {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-light);
  gap: 8rpx;
  margin-top: 8rpx;
}

/* 申请相关信息样式 */
.club-application-date,
.club-processed-by {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-light);
  gap: 8rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-medium);
} 