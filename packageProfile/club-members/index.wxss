/* pages/profile/club-members/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  padding: 30rpx 10rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

/* 搜索框 */
.search-box {
  padding: 20rpx 10rpx;
  margin-bottom: 20rpx;
}

.search-input {
  position: relative;
  background-color: #fff;
  border-radius: 100rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-input input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-btn image {
  width: 32rpx;
  height: 32rpx;
}

/* 成员列表 */
.members-list {
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.member-item {
  margin-bottom: 20rpx;
}

.member-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.member-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1px solid #eee;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.member-role {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 8rpx;
}

.role-admin {
  background-color: #fff2e8;
  color: #fa8c16;
}

.role-manager {
  background-color: #e6f7ff;
  color: #1890ff;
}

.role-member {
  background-color: #f9f9f9;
  color: #999;
}

.member-jointime {
  font-size: 24rpx;
  color: #999;
}

.member-actions {
  display: flex;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}

.action-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.action-btn text {
  font-size: 22rpx;
  color: #666;
}

.remove-btn text {
  color: #f5222d;
}

/* 角色选择弹窗 */
.role-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.role-picker {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  z-index: 101;
}

.role-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.role-picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.role-picker-close {
  width: 40rpx;
  height: 40rpx;
}

.role-picker-close image {
  width: 100%;
  height: 100%;
}

.role-option {
  position: relative;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.role-option.selected {
  background-color: #f8f8f8;
}

.role-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.role-desc {
  font-size: 26rpx;
  color: #999;
}

.role-option image {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.role-picker-actions {
  display: flex;
  margin-top: 40rpx;
}

.cancel-btn {
  flex: 1;
  height: 80rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
} 