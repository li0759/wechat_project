.addressbook {
  padding: 12rpx 12rpx 40rpx;
}

.empty {
  padding: 36rpx;
  color: #999;
  text-align: center;
}

.dept-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.dept-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 18rpx;
}

.dept-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.dept-body {
  border-top: 1rpx solid #f0f0f0;
  padding: 8rpx 0;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 26rpx;
}

.loading-text {
  color: #666;
  font-size: 24rpx;
}

.empty-inner {
  padding: 20rpx 18rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.user-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 18rpx;
}

.user-main {
  display: flex;
  align-items: center;
  gap: 14rpx;
  min-width: 0;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f5f5f5;
}

.user-text {
  min-width: 0;
}

.user-name {
  font-size: 28rpx;
  color: #222;
  font-weight: 600;
}

.user-meta {
  margin-top: 4rpx;
  color: #666;
  font-size: 22rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 460rpx;
}

.user-action .btn {
  padding: 10rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(102, 126, 234, 0.08);
}

.ab-enter {
  animation: abSlideDown 180ms ease-out both;
}

@keyframes abSlideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ab-leave {
  animation: abSlideUp 160ms ease-in both;
}

@keyframes abSlideUp {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(-10rpx);
  }
}

.ab-avatar-trigger {
  width: 72rpx;
  height: 72rpx;
}

/* ===== 用户详情弹窗：对齐“搜索用户”头像弹窗观感 ===== */
.ab-expanded-content {
  position: relative;
  z-index: 10;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.ab-user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ab-user-avatar-section {
  flex-shrink: 0;
}

.ab-user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  border: 2rpx solid #e8e8e8;
}

.ab-user-info-section {
  flex: 1;
  min-width: 0;
}

.ab-user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ab-user-details {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.ab-user-department {
  font-size: 26rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.ab-user-position {
  font-size: 26rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.ab-user-detail-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.ab-user-info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.ab-user-info-item:last-child {
  border-bottom: none;
}

.ab-user-info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.ab-user-info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  max-width: 360rpx;
  text-align: right;
}

.ab-user-actions {
  margin-top: 8rpx;
  display: flex;
  gap: 16rpx;
  justify-content: center;
  align-items: center;
}

.ab-action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1;
}

.ab-action-btn::after {
  border: none;
}

.ab-action-btn-secondary {
  background: rgba(82, 196, 26, 0.12);
  color: #389e0d;
}

.ab-added-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #52c41a;
  font-size: 26rpx;
  font-weight: 600;
}


