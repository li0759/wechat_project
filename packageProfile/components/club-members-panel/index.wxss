  display: flex;
  flex-direction: column;
  overflow: hidden;
}



/* 搜索区域样式 */
.search-section {
  padding: 12rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.search-results-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.results-header {
  display: flex;
