/* 协会已加入面板样式 */
.club-joined-panel {
  position: relative;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f3e3f3ff;
  overflow: hidden;
}

/* 灰色蒙层样式 */
.disabled-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: all;
}

.disabled-overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  margin: 40rpx;
}

.disabled-overlay-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

.disabled-overlay-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-top: 8rpx;
}

/* 主滚动区域 */
.page-scroll {
  height: calc(100vh - 200rpx);
  padding-bottom: 140rpx;
  -webkit-overflow-scrolling: touch;
}

/* 协会基本信息区域 */
.club-info-section {
  background: #fff;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

/* 会员头像网格 - 单行居中显示 */
.members-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  width: 100%;
  padding: 16rpx 0;
}

.member-avatar-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.member-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 24rpx;
}

.member-count text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 特色活动区域 */
.featured-event-section {
  padding: 32rpx;
  background: #fff;
}

.featured-event-card {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  min-height: 200rpx;
}

/* 没有活动时的占位 */
.featured-event-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 16rpx;
  min-height: 200rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.placeholder-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #999;
}

/* 地图背景 */
.event-map-bg {
  position: absolute;
  top: 0;
  right: 0;
  width: 500rpx;
  height: 350rpx;
  z-index: 1;
  border-radius: 0 16rpx 16rpx 0;
  overflow: hidden;
}

.map-bg-image {
  width: 100%;
  height: 100%;
  opacity: 1;
}

.map-fade-left {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 120rpx;
  background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0.85) 35%, rgba(255,255,255,0.4) 70%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

.map-fade-bottom {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background: linear-gradient(0deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0.85) 35%, rgba(255,255,255,0.4) 70%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

.map-fade-corner {
  position: absolute;
  left: -40rpx;
  bottom: -40rpx;
  width: 220rpx;
  height: 220rpx;
  background: radial-gradient(closest-side, rgba(255,255,255,1) 0%, rgba(255,255,255,0.85) 45%, rgba(255,255,255,0.35) 75%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

/* 活动内容 */
.event-content {
  position: relative;
  z-index: 2;
  min-height: 200rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.event-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.event-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #666;
}

/* 活动操作行 */
.event-action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.event-status {
  font-size: 26rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.status-upcoming {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.status-ongoing {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.status-ended {
  background: rgba(0, 0, 0, 0.05);
  color: #999;
}

/* 活动列表区域 */
.events-list-section {
  padding: 0 32rpx 32rpx;
  background: #fff;
}

.events-container {
  width: 100%;
}

.events-list {
  width: 100%;
}

.event-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 骨架屏样式 - 参考events-panel */
.inline-skeleton-card {
  padding: 24rpx;
  background: #fff;
}

.inline-skeleton-content {
  display: flex;
  gap: 16rpx;
}

.inline-skeleton-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 活动主内容 - 参考events-panel */
.event-main-content {
  display: flex;
  padding: 24rpx;
  gap: 16rpx;
}

.event-cover-wrapper {
  flex-shrink: 0;
}

.event-info-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.event-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.event-time {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.event-description {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-text {
  margin-top: 16rpx;
  font-size: 28rpx;
}

.empty-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ccc;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 160rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: linear-gradient(0deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.9) 70%, transparent 100%);
  backdrop-filter: blur(20rpx);
}

.action-left,
.action-right {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  min-width: 160rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  padding: 0 32rpx;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: rgba(0,0,0,0.05);
  color: #666;
}

.action-btn.danger {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.action-btn:active {
  transform: scale(0.95);
}
