/* club-manage-panel 组件样式 - 对齐 event-manage-panel */
.club-manage-panel {
  --md-sys-color-primary: #ff6b9d;
  --md-sys-color-on-primary: #ffffff;
  --md-sys-color-surface: #fffbff;
  --md-sys-color-on-surface: #1f1a1c;
  --md-sys-color-surface-variant: #f4dde2;
  --md-sys-color-on-surface-variant: #524346;
  --md-sys-color-background: #f7f8fa;
  --md-sys-elevation-1: 0px 1px 2px rgba(0, 0, 0, 0.3), 0px 1px 3px 1px rgba(0, 0, 0, 0.15);
  --md-sys-shape-corner-medium: 24rpx;
  background-color: var(--md-sys-color-background);
  color: var(--md-sys-color-on-surface);
  height: 100%;
  overflow: hidden;
  position: relative;
}

/* 灰色蒙层样式 */
.disabled-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: all;
}

.disabled-overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  margin: 40rpx;
}

.disabled-overlay-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

.disabled-overlay-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-top: 8rpx;
}

/* 使用 calc 计算高度，200rpx 是弹窗顶部留白 */
.page-scroll { height: calc(100vh - 200rpx); }

.loading {
  margin-top: 120rpx;
}

.rows {
  padding: 16rpx 16rpx 24rpx;
  box-sizing: border-box;
}

/* 行 */
.row {
  background: #f2f3f5;
  border-radius: var(--md-sys-shape-corner-medium);
  box-shadow: var(--md-sys-elevation-1);
  border: 2rpx solid #e5e6eb;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
}

.row-100 { height: 100rpx; }
.row-300 { height: 300rpx; }

.row-basic {
  padding: 18rpx 20rpx;
  align-items: flex-start;
}

.row-basic-left {
  flex: 0 0 auto;
  min-width: 140rpx;
  padding-top: 6rpx;
}

.row-label {
  font-size: 26rpx;
  font-weight: 800;
  color: #333;
}

.row-basic-right {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.row-basic-title {
  font-size: 30rpx;
  font-weight: 900;
  color: #222;
}

.row-basic-desc {
  font-size: 24rpx;
  color: #666;
}

.row-basic-arrow {
  flex: 0 0 auto;
  margin-top: 6rpx;
}

.row-left {
  flex: 0 0 auto;
  min-width: 180rpx;
}

.row-right {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 10rpx;
}

.row-value {
  max-width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  color: #222;
}

.muted { color: #999; }

/* split row */
.split-row {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.split-half {
  width: 350rpx;
}

/* panel */
.panel {
  width: 350rpx;
  height: 300rpx;
  background: #f2f3f5;
  border-radius: var(--md-sys-shape-corner-medium);
  box-shadow: var(--md-sys-elevation-1);
  border: 2rpx solid #e5e6eb;
  padding: 18rpx 18rpx 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.panel-wide {
  width: 100%;
}

/* 让封面框与 create 页观感一致：固定 700rpx 并居中 */
.panel-cover {
  width: 700rpx;
  margin: 0 auto 16rpx;
}

/* ===== 人员管理（对齐 club-create：700x800 + 头像条） ===== */
.panel-people {
  width: 700rpx;
  height: 800rpx;
  margin: 0 auto 16rpx;
}

/* 成员排序选择器 */
.member-sort-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 12rpx 0;
  margin-bottom: 16rpx;
}

.sort-option {
  font-size: 24rpx; 
  color: #666;
  padding: 8rpx 20rpx; 
  border-radius: 24rpx; 
  background: #f5f5f5;
  transition: all 0.2s ease;
}

.sort-option.active {
  color: #fff;
  background: var(--md-sys-color-primary);
  font-weight: 600;
}

/* 成员 Isotope 容器 */
.member-isotope-container {
  width: 100%;
  min-height: 150rpx;
  margin-bottom: 16rpx;
}

/* 隐藏的弹窗容器 */
.hidden-popups {
  position: absolute;
  left: -9999rpx;
  top: -9999rpx;
  opacity: 0;
  pointer-events: none;
}

.people-strip {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
  align-items: flex-start;
}

.people-item {
  width: 96rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.people-avatar-wrap {
  position: relative;
  width: 72rpx;
  height: 72rpx;
}

.people-avatar-trigger {
  width: 72rpx;
  height: 72rpx;
}

.people-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #eee;
  box-sizing: border-box;
}

.people-avatar.pending {
  border: 4rpx solid rgba(0,0,0,0.28);
}

.people-plus {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 2rpx dashed #ff6b9d;
  background: rgba(255, 107, 157, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42rpx;
  color: #ff6b9d;
  font-weight: 800;
}

.people-star {
  position: absolute;
  right: -6rpx;
  top: -6rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #ff6b9d;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.people-label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #333;
  max-width: 96rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ===== 成员详情弹窗（同 club-create） ===== */
.member-detail-popup {
  padding: 40rpx;
  text-align: center;
  background: white;
  border-radius: 16rpx;
}

.member-detail-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 24rpx;
  display: block;
}

.member-detail-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.member-detail-role {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.member-detail-info {
  text-align: left;
  margin-bottom: 24rpx;
}

.member-detail-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.panel-300 { height: 300rpx; }

.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 12rpx;
  flex-shrink: 0;
}

.panel-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: #222;
}

.panel-hint {
  font-size: 22rpx;
  color: #888;
  font-weight: 650;
}

.panel-body {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.mini-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.mini-k {
  font-size: 22rpx;
  color: #666;
}

.mini-v {
  font-size: 22rpx;
  color: #222;
  max-width: 210rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* cover */
.cover-preview {
  flex: 1;
  min-height: 0;
  border-radius: 16rpx;
  overflow: hidden;
  background: #eee;
}
.cover-img {
  width: 100%;
  height: 100%;
}
.cover-popup-preview {
  border-radius: 20rpx;
  overflow: hidden;
  background: #eee;
  height: 520rpx;
  position: relative;
}
.cover-popup-img {
  width: 100%;
  height: 100%;
}
.cover-popup-tip {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  font-size: 24rpx;
  font-weight: 700;
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
}

/* popup shell */
.popup-shell {
  padding: 24rpx;
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.fullscreen-popup {
  height: 100%;
  min-height: 100%;
}

#card-members .popup-shell.fullscreen-popup,
#card-activities .popup-shell.fullscreen-popup {
  padding: 0;
}

#card-members .popup-body-full .popup-shell,
#card-activities .popup-body-full .popup-shell {
  padding: 24rpx !important;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 18rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 900;
}

.popup-body {
  flex: 1;
  overflow: hidden;
}

.popup-body-full {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.popup-footer {
  padding-top: 18rpx;
}

.form-group {
  margin-bottom: 18rpx;
}
.form-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 650;
}

.pill-ghost {
  background: var(--md-sys-color-surface-variant);
  color: #333;
  font-weight: 650;
  font-size: 26rpx;
  padding: 14rpx 20rpx;
  border-radius: 999rpx;
}

/* members grid (reuse event-manage style) */
.members-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 12rpx;
}
.members-toolbar .hint {
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface-variant);
}

.members-grid-wrap {
  --td-grid-item-image-small-width: 92rpx;
  --td-grid-item-padding: 10rpx;
  --td-grid-item-text-padding-top: 10rpx;
  --td-grid-item-text-small-font-size: 22rpx;
  --td-grid-item-text-line-height: 34rpx;
}

.member-grid-image-slot {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: visible;
}

.member-avatar-trigger {
  width: 112rpx;
  height: 112rpx;
  position: relative;
  overflow: visible;
}

.member-avatar {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.role-ring {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border: 6rpx solid #bfbfbf;
  box-sizing: border-box;
  pointer-events: none;
}

.role-president { border-color: #52c41a; }
.role-vice_president { border-color: #fa8c16; }
.role-director { border-color: #1890ff; }
.role-member { border-color: #bfbfbf; }

.member-expanded-header {
  display: flex;
  align-items: center;
  gap: 18rpx;
}
.member-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.member-expanded-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.member-expanded-name {
  font-size: 34rpx;
  font-weight: 900;
  color: #222;
}
.role-badge-large {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  color: #fff;
  font-weight: 750;
}
.member-role-president { background: #52c41a; }
.member-role-vice_president { background: #fa8c16; }
.member-role-director { background: #1890ff; }
.member-role-member { background: #999; }

.member-expanded-meta {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.detail-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.member-expanded-details {
  margin-top: 18rpx;
  border-top: 1px solid rgba(0,0,0,0.06);
}
.member-detail-row {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
  padding: 14rpx 0;
  border-bottom: 1px solid rgba(0,0,0,0.06);
}
.member-detail-row:last-child { border-bottom: none; }
.detail-label { font-size: 24rpx; color: #666; }
.detail-value { font-size: 24rpx; color: #222; text-align: right; }

.actions-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 14rpx;
}

/* FAB */
.members-fab,
.activities-fab {
  /* 在全屏弹窗内要跟随内容滑动：不能用 fixed */
  position: absolute;
  top: 1200rpx;
  right: 28rpx;
  z-index: 2000;
}

.members-fab-btn,
.activities-fab-btn {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: var(--md-sys-color-primary);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.members-fab-btn:active,
.activities-fab-btn:active {
  transform: scale(0.92);
}


