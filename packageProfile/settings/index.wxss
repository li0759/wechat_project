/* pages/profile/settings/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  padding: 30rpx 10rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 设置列表 */
.settings-list {
  padding-bottom: 40rpx;
}

.settings-group {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.settings-title {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 30rpx 10rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.settings-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1rpx;
  background-color: #f5f5f5;
}

.item-hover {
  background-color: #f9f9f9;
}

.item-content {
  display: flex;
  align-items: center;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item-label {
  font-size: 30rpx;
  color: #333;
}

.item-arrow image {
  width: 32rpx;
  height: 32rpx;
}

.item-extra {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录按钮 */
.logout-button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #f5222d;
  background-color: transparent;
}

.logout-button::after {
  border: none;
}

/* 修改密码弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50rpx;
  right: 50rpx;
  transform: translateY(-50%);
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 101;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  width: 40rpx;
  height: 40rpx;
}

.modal-close image {
  width: 100%;
  height: 100%;
}

.modal-content {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-group input {
  background-color: #f8f8f8;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-button {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
}

.modal-button.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-button.confirm {
  color: #1890ff;
} 