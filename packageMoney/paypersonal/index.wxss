/* pages/money/paypersonal/index.wxss */
/* 基础变量 */
:root {
  --primary: rgb(223, 118, 176);
  --primary-light: rgba(223, 118, 176, 0.15);
  --primary-medium: rgba(223, 118, 176, 0.3);
  --primary-dark: rgb(195, 93, 151);
  --text-dark: #333333;
  --text-medium: #666666;
  --text-light: #999999;
  --bg-color: #fff;
  --bg-light: #fcf7fa;
  --border-radius: 16rpx;
  --shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  /* 特定的个人收款颜色变量 */
  --unpaid-color: #ff9900;  /* 未支付的橙色 */
  --paid-color: #4cd964;    /* 已支付的绿色 */
}

/* 页面主容器 */
.event-container {
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 列表选项卡特殊样式 */
.list-tab {
  position: relative;
}

/* 固定在顶部的月份显示 */
.fixed-month-display {
  position: fixed;
  top: 88rpx;
  left: 0;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  font-size: 36rpx;
  color: rgb(223, 118, 176);
  font-weight: 500;
  padding: 10rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 内容区域 */
.list-content {
  padding-top: 50rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 瀑布流容器 */
.waterfall-container {
  flex: 1;
  height: 100%;
  position: relative;
}

/* 全宽列布局 */
.full-width-column {
  width: 100%;
  padding: 0 8rpx;
}

/* 空状态容器 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

/* 日历容器样式 */
.calendar-container {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 日历空数据提示 */
.calendar-empty-tip {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
  border-top: 1px solid #f5f5f5;
  margin-top: 20rpx;
}

/* 添加加载更多按钮样式 */
.load-more-container {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  position: relative;
  z-index: 10;
  margin-bottom: 20rpx;
}

/* 加载更多按钮相对于时间轴的位置 */
.timeline-items .load-more-container {
  margin-top: 10rpx;
}

.load-more-btn {
  width: 240rpx !important;
  height: 70rpx !important;
  border-radius: 35rpx !important;
  color: #666 !important;
  font-size: 28rpx !important;
}

/* 自定义vant Tab组件样式 */
.van-tab {
  flex: 1 !important;
  min-width: 25% !important;
  position: sticky;
}

.van-tabs__wrap {
  background-color: #fff;
}

.van-tab--active {
  font-weight: bold !important;
  color: rgb(223, 118, 176) !important;
}

.van-tabs__line {
  background-color: rgb(223, 118, 176) !important;
  height: 6rpx !important;
  width: 120rpx !important;
  border-radius: 3rpx !important;
}

/* 时间轴容器 */
.timeline-scroll-view {
  padding: 20rpx;
  box-sizing: border-box;
}

.timeline-main-container {
  position: relative;
  display: flex;
  margin-top: 50rpx; /* 为顶部月份显示留出空间 */
}

/* 时间轴中间线 */
.timeline-center {
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 0;
  z-index: 1;
}

.timeline-line {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 4rpx;
  background-color: #e0e0e0;
  top: 0;
  bottom: 0;
  z-index: 1;
}

/* 时间轴内容区 */
.timeline-items {
  flex: 1;
  position: relative;
  z-index: 2;
}

/* 时间轴项目 */
.timeline-item {
  display: flex;
  margin-bottom: 40rpx;
  position: relative;
  min-height: 120rpx;
}

/* 左侧时间轴项目（未支付） */
.income-item {
  justify-content: flex-end;
  padding-right: calc(50% + 20rpx);
}

/* 右侧时间轴项目（已支付） */
.expense-item {
  justify-content: flex-start;
  padding-left: calc(50% + 20rpx);
}

/* 时间轴点 */
.timeline-dot {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background-color: #e0e0e0;
  border-radius: 50%;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
}

/* 未支付项目圆点颜色 */
.income-item .timeline-dot {
  background-color: var(--unpaid-color);
}

/* 已支付项目圆点颜色 */
.expense-item .timeline-dot {
  background-color: var(--paid-color);
}

/* 时间轴内容卡片 */
.timeline-content {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  width: 85%;
  position: relative;
}

/* 待支付项目（左侧） */
.pay-group {
  padding: 10rpx;
}

.pay-description {
  font-size: 30rpx;
  color: var(--text-dark);
  margin-bottom: 10rpx;
  word-break: break-all;
}

.pay-amount {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}

.paid {
  color: var(--paid-color);
  font-size: 28rpx;
}

.unpaid {
  color: var(--unpaid-color);
  font-size: 28rpx;
  font-weight: 500;
}

/* 已支付项目（右侧） */
.club-fee {
  padding: 10rpx;
}

.fee-description {
  font-size: 30rpx;
  color: var(--text-dark);
  margin-bottom: 10rpx;
  word-break: break-all;
}

.fee-amount {
  font-size: 32rpx;
  color: var(--paid-color);
  font-weight: 500;
  margin: 10rpx 0;
}

/* 项目内部日期显示 */
.item-date-inside {
  font-size: 24rpx;
  color: var(--text-light);
  margin-top: 10rpx;
}

/* 支付状态样式 */
.pay-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  padding-top: 8rpx;
  border-top: 1px dashed #f0f0f0;
  font-size: 24rpx;
}

.unpaid-status {
  color: var(--unpaid-color);
}

.paid-status {
  color: var(--paid-color);
}

.pay-date {
  font-size: 22rpx;
  color: var(--text-light);
}

/* 未缴费数量悬浮提示 */
.unpaid-badge {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  background-color: var(--unpaid-color);
  color: white;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 153, 0, 0.3);
  z-index: 100;
} 