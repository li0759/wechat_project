}

/* 添加按钮和已添加标识 */
.add-user-btn {
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.added-mark {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 部门折叠面板加载状态样式 */
