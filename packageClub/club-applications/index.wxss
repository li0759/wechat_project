.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 主题色定义 */
:root {
  --primary-color: rgb(223, 118, 176);
}

.applications-list {
  padding-bottom: 30rpx;
}

.application-item {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 添加用户头像样式 */
.application-header {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.application-info {
  flex: 1;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.action-buttons .action-btn {
  width: 180rpx !important;
  margin-left: 20rpx;
}

.van-empty {
  padding: 60rpx 0;
}

.status-pending {
  color: #faad14;
}

.status-approved {
  color: rgb(223, 118, 176);
}

.status-rejected {
  color: #f5222d;
}

/* 添加按钮主题色 */
.primary-btn {
  background-color: rgb(223, 118, 176) !important;
  border-color: rgb(223, 118, 176) !important;
}

/* 圆角按钮样式 */
.van-button--round {
  border-radius: 999rpx !important;
}

/* 覆盖van-button默认样式 */
.van-button {
  font-weight: 500 !important;
}

/* 禁用样式 */
.van-button--disabled {
  opacity: 0.5 !important;
} 