/* 成员管理骨架屏样式 */
.skeleton-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f7f8fa;
  z-index: 999;
  overflow: hidden;
  padding-top: 100rpx;
}

.skeleton-search {
  padding: 16rpx 32rpx;
  background-color: #ffffff;
}

.skeleton-search-box {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  height: 64rpx;
  box-sizing: border-box;
}

.skeleton-search-icon {
  width: 32rpx;
  height: 32rpx;
  background-color: #d0d0d0;
  border-radius: 50%;
  flex-shrink: 0;
}

.skeleton-list {
  margin-top: 50rpx;
  padding: 0 24rpx 120rpx;
}

.skeleton-index-anchor {
  padding: 16rpx 0 12rpx;
  margin-bottom: 8rpx;
}

.skeleton-index-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
}

.skeleton-member-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: relative;
}

.skeleton-delete-btn {
  position: absolute;
  left: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
}

.skeleton-member-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.skeleton-name-row {
  display: flex;
  align-items: center;
}

/* 右侧字母索引条骨架 */
.skeleton-index-bar {
  position: fixed;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  z-index: 1000;
  padding: 8rpx 4rpx;
}

.skeleton-index-letter {
  width: 32rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.skeleton-add-button {
  position: fixed;
  right: 32rpx;
  bottom: 100rpx;
  z-index: 1000;
}
