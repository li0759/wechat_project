/* 搜索建议组件样式 */
.search-suggest-container {
  position: relative;
  width: 100%;
  z-index: 1000;
}

/* 搜索输入框容器 */
.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.search-input-wrapper.round {
  border-radius: 50rpx;
  padding: 0 24rpx;
}

.search-input-wrapper.square {
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.search-input-wrapper.focused {
  background: #ffffff;
  border-color: #ff6b9d;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 157, 0.1);
}

/* 搜索图标 */
.search-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

/* 输入框 */
.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 清空按钮 */
.clear-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  border-radius: 50%;
  background: #e8e8e8;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.clear-button.show {
  opacity: 1;
  transform: scale(1);
}

.clear-button.hide {
  opacity: 0;
  transform: scale(0);
}

.clear-button:active {
  background: #d8d8d8;
}

/* 搜索按钮 */
.search-button {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  padding: 0 24rpx;
  margin-left: 16rpx;
  background: #ff6b9d;
  border-radius: 30rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.search-button:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.search-button-text {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 500;
}

/* 建议下拉框 */
.suggestions-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  border: 2rpx solid #f0f0f0;
  max-height: 600rpx;
  overflow: hidden;
  z-index: 1001;
  margin-top: 8rpx;
  transition: all 0.3s ease;
}

.suggestions-dropdown.show {
  opacity: 1;
  transform: translateY(0);
  visibility: visible;
}

.suggestions-dropdown.hide {
  opacity: 0;
  transform: translateY(-20rpx);
  visibility: hidden;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  gap: 16rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 建议列表 */
.suggestions-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.suggestions-header {
  padding: 20rpx 24rpx 12rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.suggestions-title {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: all 0.2s ease;
  position: relative;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background: #f8f9fa;
}

.suggestion-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.suggestion-content {
  flex: 1;
  min-width: 0;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  word-break: break-all;
}

.suggestion-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.3;
  word-break: break-all;
}

.suggestion-tag {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.tag-text {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 20rpx;
  border-radius: 20rpx;
}

/* 搜索历史 */
.history-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx 12rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.history-title {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.clear-history-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.clear-history-btn:active {
  background: #f0f0f0;
}

.clear-text {
  font-size: 22rpx;
  color: #999;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: all 0.2s ease;
  position: relative;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: #f8f9fa;
}

.history-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.history-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  word-break: break-all;
}

.delete-history-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.delete-history-btn:active {
  background: #f0f0f0;
}

/* 空状态 */
.empty-suggestions {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  gap: 16rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 滚动条样式 */
.suggestions-list::-webkit-scrollbar,
.history-list::-webkit-scrollbar {
  width: 6rpx;
}

.suggestions-list::-webkit-scrollbar-track,
.history-list::-webkit-scrollbar-track {
  background: #f5f5f5;
  border-radius: 3rpx;
}

.suggestions-list::-webkit-scrollbar-thumb,
.history-list::-webkit-scrollbar-thumb {
  background: #ddd;
  border-radius: 3rpx;
}

.suggestions-list::-webkit-scrollbar-thumb:hover,
.history-list::-webkit-scrollbar-thumb:hover {
  background: #ccc;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .search-input {
    font-size: 26rpx;
  }
  
  .suggestion-title {
    font-size: 26rpx;
  }
  
  .history-text {
    font-size: 26rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.suggestion-item,
.history-item {
  animation: fadeInUp 0.3s ease forwards;
}

/* 高亮搜索关键词 */
.highlight {
  color: #ff6b9d;
  font-weight: 600;
  background: rgba(255, 107, 157, 0.1);
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
} 