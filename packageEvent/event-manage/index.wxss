/* 活动管理页 - 简洁现代化设计 */
page {
  background: linear-gradient(135deg, #fdf8fd 0%, #f9f4f9 100%);
  min-height: 100vh;
}


/* 基础容器 */
.modern-container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}


/* 主滚动区域 */
.main-scroll {
  flex: 1;
  padding-top: calc(28rpx + env(safe-area-inset-top));
  padding-bottom: 140rpx;
}

/* 信息展示区 */
.info-section {
  padding: 0 24rpx 24rpx;
}

/* 图片轮播 - 2.5个项目显示 */
.images-swiper {
  padding-top: 0rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.images-swiper-container {
  height: 200rpx;
  border-radius: 24rpx;
  overflow: visible;
}

.images-swiper-item {
  padding: 0 8rpx;
  box-sizing: border-box;
}

.image-wrapper {
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.15);
  transition: transform 0.3s ease;
}

.image-wrapper:active {
  transform: scale(0.95);
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 24rpx;
  right: 36rpx;
  z-index: 10;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  backdrop-filter: blur(10rpx);
}

.status-tag.active {
  background: linear-gradient(135deg, #4ade80, #22c55e);
}

.status-tag.ended {
  background: linear-gradient(135deg, #f87171, #ef4444);
}

/* 图片指示器 */
.images-indicator {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
}

.indicator-dots {
  display: flex;
  gap: 12rpx;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 32rpx;
  backdrop-filter: blur(10rpx);
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.indicator-dot.active {
  background: #ffffff;
  transform: scale(1.2);
}

/* 卡片通用样式 */
.card {
  margin-bottom: 24rpx;
}

/* 详细信息卡片 */
.detail-info-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.event-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 32rpx;
  letter-spacing: 0.5rpx;
}

/* 核心信息网格 */
.core-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.core-info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
}

.core-info-content {
  flex: 1;
  min-width: 0;
}

.core-info-label {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.core-info-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 600;
  word-break: break-all;
}

/* 基本信息段落文字样式 */
.basic-info-text {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-text-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 0;
}

.info-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.5;
  font-weight: 500;
}

/* 地图卡片 */
.location-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.location-map {
  position: relative;
  height: 340rpx;
  overflow: hidden;
}

.map-image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

.location-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.location-name {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
}

.location-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: white;
  opacity: 0.9;
}

/* 内容卡片 */
.content-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #4b5563;
}

/* 参与者卡片 */
.participants-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.participants-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.participants-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.participants-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
}

.participants-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  text-align: center;
}

.participant-avatar {
  position: relative;
  width: 64rpx;
  height: 64rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 107, 157, 0.1);
}

.checkin-badge {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 20rpx;
  height: 20rpx;
  background: #22c55e;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

.participant-name {
  font-size: 22rpx;
  color: #6b7280;
  max-width: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.more-participants .more-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d, #ec4899);
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-text {
  font-size: 20rpx;
  color: white;
  font-weight: 600;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b9d;
}

.stat-label {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 500;
}

/* 操作区 */
.action-section {
  height: 500rpx;
  margin-top: 24rpx;
}

.actions-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 0 4rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  min-height: 88rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d, #ec4899);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.3);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.action-btn.danger {
  background: linear-gradient(135deg, #f87171, #ef4444);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(248, 113, 113, 0.3);
}

.action-btn.danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(248, 113, 113, 0.4);
}

.action-btn.schedule-btn {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(139, 92, 246, 0.3);
}

.action-btn.schedule-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.4);
}

.action-btn.cost-btn {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(245, 158, 11, 0.3);
}

.action-btn.cost-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.4);
}

.action-btn.image-btn {
  background: linear-gradient(135deg, #06b6d4, #0891b2);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(6, 182, 212, 0.3);
}

.action-btn.image-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(6, 182, 212, 0.4);
}

.action-btn.disabled {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  color: #9ca3af;
  box-shadow: none;
  opacity: 0.6;
}

.action-btn.disabled:active {
  transform: none;
}

/* 空状态 */
.empty-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 弹窗样式 */
.popup-container {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  min-height: 35vh;
  overflow-y: auto;
}

/* 图片管理弹窗特殊样式 */
.image-popup .popup-container {
  height: 50vh;
  display: flex;
  flex-direction: column;
}

.drag-container {
  flex: 1;
  min-height: 0;
  overflow: hidden;
}

.drag-img-container {
  height: 50%;
  padding-bottom: 120rpx; /* 留出按钮空间 */
}

.popup-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.1);
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.popup-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  flex: 1;
  min-height: 0;
}

/* 图片管理弹窗内容区域 */
.image-popup .popup-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.form-input {
  padding: 20rpx 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.form-input:active {
  border-color: #ff6b9d;
  background: #fdf2f8;
}

.placeholder {
  color: #9ca3af;
}

.has-value {
  color: #1f2937;
}

.images-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 107, 157, 0.05);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #ff6b9d;
  flex-shrink: 0;
}

/* 动画效果 */
.fade-in-up {
  animation: fadeInUp 0.6s ease-out;
}

.fade-in-up-delay-1 {
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式调整 */
@media (max-width: 375px) {
  .core-info-grid {
    grid-template-columns: 1fr;
  }
  
  .participants-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .actions-container {
    grid-template-columns: 1fr;
  }
}

/* 创建信息卡片样式 */
.create-info-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

/* 创建信息网格 */
.create-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

/* 信息项基础样式 */
.create-info-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
  min-height: 80rpx;
}

.create-info-item:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #fce7f3, #fbcfe8);
}

/* 禁用状态 */
.create-info-item.disabled {
  opacity: 0.6;
  pointer-events: none;
  background: linear-gradient(135deg, #f5f5f5, #e5e5e5);
  cursor: not-allowed;
}

.create-info-item.disabled:active {
  transform: none;
  background: linear-gradient(135deg, #f5f5f5, #e5e5e5);
}

/* 禁用提示文字 */
.disabled-hint {
  font-size: 22rpx !important;
  color: #999 !important;
  font-weight: 400 !important;
  margin-left: 8rpx;
}

/* 单个块 */
.create-info-item.single-block {
  grid-column: span 1;
}

/* 双倍宽度 */
.create-info-item.double-width {
  grid-column: span 2;
}

/* 双倍高度 */
.create-info-item.double-height {
  min-height: 160rpx;
  align-items: flex-start;
}

.create-info-content {
  flex: 1;
  min-width: 0;
}

.create-info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.create-info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  word-break: break-all;
  line-height: 1.4;
}

.create-info-value.description-text {
  font-size: 26rpx;
  line-height: 1.5;
  max-height: 120rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

/* 弹窗操作按钮样式 */
.popup-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.popup-actions .action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
}

.popup-actions .action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
}

.popup-actions .action-btn.primary:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #ff5a8a, #ff7d9a);
}

.popup-actions .action-btn.danger {
  background: linear-gradient(135deg, #ff4757, #ff6b7a);
  color: white;
}

.popup-actions .action-btn.danger:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #ff3742, #ff5a6b);
}

.popup-actions .action-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 简介编辑弹窗样式 */
.content-popup .popup-container {
  max-height: 80vh;
}

.content-popup .popup-content {
  padding: 24rpx 32rpx 32rpx;
}

/* 响应式调整 - 创建信息块 */
@media (max-width: 375px) {
  .create-info-grid {
    grid-template-columns: 1fr;
  }
  
  .create-info-item.double-width {
    grid-column: span 1;
  }
}
/* 地址编辑弹窗样式 */
.location-popup .popup-container {
  max-height: 80vh;
}

.location-popup .popup-content {
  padding: 24rpx 32rpx 32rpx;
}

.location-popup .form-item {
  margin-bottom: 32rpx;
}

.location-popup .form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.location-popup .location-input {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
}

.location-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  min-height: 80rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.location-picker:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.location-picker .placeholder {
  color: #999;
  font-size: 28rpx;
}

.location-picker .has-value {
  color: #333;
  font-size: 26rpx;
  line-height: 1.4;
}

.popup-actions .action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.popup-actions .action-btn.secondary:active {
  transform: scale(0.98);
  background: #e9ecef;
}

/* 日程弹窗样式 */
.schedule-popup .popup-container {
  max-height: 85vh;
}

.schedule-popup .popup-content {
  padding: 24rpx 32rpx 32rpx;
}

/* 表单区域 */
.form-section {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 单选框组样式 */
.form-section van-radio-group {
  display: flex;
  gap: 24rpx;
}

/* 日期选择器容器 */
.date-selector {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx;
}

/* 时间选择器 */
.time-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.time-selector:active {
  background: #e9ecef;
}

.time-display {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 滑块容器 */
.slider-container {
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.slider-label {
  display: block;
  text-align: center;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 新增：warning类型按钮样式 */
.action-btn.warning {
  background: linear-gradient(135deg, #ff9500, #ff7b00);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(255, 149, 0, 0.3);
}

.action-btn.warning:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.4);
}

/* 对话框内容样式 */
.dialog-content {
  padding: 20rpx;
}

.dialog-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  text-align: center;
}

/* 操作按钮 */
.popup-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.popup-actions .action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.popup-actions .action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.popup-actions .action-btn.secondary:active {
  background: #e9ecef;
}

.popup-actions .action-btn.primary {
  background: #ff6b9d;
  color: #fff;
}

.popup-actions .action-btn.primary:active {
  background: #e55a87;
  transform: scale(0.98);
}

.popup-actions .action-btn.warning {
  background: #ff9500;
  color: #fff;
}

.popup-actions .action-btn.warning:active {
  background: #e6850e;
  transform: scale(0.98);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .schedule-popup .popup-content {
    padding: 20rpx 24rpx 24rpx;
  }
  
  .form-section {
    margin-bottom: 24rpx;
  }
  
  .section-title {
    font-size: 26rpx;
  }
}

/* 预计时间编辑弹窗样式 */
.pre-schedule-popup .popup-container {
  max-height: 85vh;
}

.pre-schedule-popup .popup-content {
  padding: 24rpx 32rpx 32rpx;
}

/* 时长滑块容器 */
.duration-slider-container {
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.duration-label {
  display: block;
  text-align: center;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #ff6b9d;
  font-weight: 600;
}

/* 预计结束时间显示 */
.end-time-display {
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 107, 157, 0.1);
}

.end-time-text {
  font-size: 28rpx;
  color: #ff6b9d;
  font-weight: 600;
  text-align: center;
}
