/* event-manage-panel 组件样式 - 视觉优化版 */
.event-manage-panel {
  /* 优化后的设计 token */
  --md-sys-color-primary: #DF76B0;
  --md-sys-color-primary-dark: #C85A9E;
  --md-sys-color-primary-light: rgba(223, 118, 176, 0.1);
  --md-sys-color-on-primary: #FFFFFF;
  --md-sys-color-primary-container: rgba(223, 118, 176, 0.1);
  --md-sys-color-secondary: #6F767E;
  --md-sys-color-surface: #FFFFFF;
  --md-sys-color-on-surface: #1A1D1F;
  --md-sys-color-surface-variant: #F2F4F7;
  --md-sys-color-on-surface-variant: #6F767E;
  --md-sys-color-background: #F8F9FB;
  /* 优化阴影：从厚重改为轻柔 */
  --md-sys-elevation-1: 0 2rpx 4rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  --md-sys-elevation-2: 0 4rpx 8rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  /* 统一圆角 */
  --md-sys-shape-corner-large: 20rpx;
  --md-sys-shape-corner-medium: 16rpx;
  --md-sys-shape-corner-small: 12rpx;
  
  /* 容器布局 - 参考 event-detail-panel */
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: var(--md-sys-color-background);
  color: var(--md-sys-color-on-surface);
  overflow: hidden;
}

/* 灰色蒙层样式 */
.disabled-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: all;
}

.disabled-overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  margin: 40rpx;
}

.disabled-overlay-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

.disabled-overlay-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-top: 8rpx;
}

/* 主内容区域 - 参考 event-detail-panel */
.main-content {
  flex: 1;
  padding-bottom: 140rpx; /* 为底部操作栏留出空间 */
