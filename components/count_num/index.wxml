<!-- 数字滚动动画组件 -->
<view class="count-num-container {{customClass}}" style="{{customStyle}}">
  <view class="count-num-wrapper">
    <view 
      class="count-num-item {{decimalPart > 0 ? 'has-decimal' : ''}}"
      wx:for="{{digitList}}" 
      wx:key="index"
    >
      <view 
        class="count-num-scroll" 
        style="transform: translateY(-{{item * 10}}%); transition-duration: {{duration}}ms; transition-delay: {{(digitList.length - index - 1) * 100}}ms;"
      >
        <view class="count-num-digit">0</view>
        <view class="count-num-digit">1</view>
        <view class="count-num-digit">2</view>
        <view class="count-num-digit">3</view>
        <view class="count-num-digit">4</view>
        <view class="count-num-digit">5</view>
        <view class="count-num-digit">6</view>
        <view class="count-num-digit">7</view>
        <view class="count-num-digit">8</view>
        <view class="count-num-digit">9</view>
      </view>
    </view>
    
    <!-- 小数点 -->
    <view class="count-num-decimal" wx:if="{{decimalPart > 0}}">.</view>
    
    <!-- 小数部分 -->
    <view 
      class="count-num-item decimal-item"
      wx:for="{{decimalDigits}}" 
      wx:key="*this"
      wx:if="{{decimalPart > 0}}"
    >
      <view 
        class="count-num-scroll" 
        style="transform: translateY(-{{item * 10}}%); transition-duration: {{duration}}ms; transition-delay: {{(digitList.length + index) * 100}}ms;"
      >
        <view class="count-num-digit">0</view>
        <view class="count-num-digit">1</view>
        <view class="count-num-digit">2</view>
        <view class="count-num-digit">3</view>
        <view class="count-num-digit">4</view>
        <view class="count-num-digit">5</view>
        <view class="count-num-digit">6</view>
        <view class="count-num-digit">7</view>
        <view class="count-num-digit">8</view>
        <view class="count-num-digit">9</view>
      </view>
    </view>
    
    <!-- 前缀 -->
    <view class="count-num-prefix" wx:if="{{prefix}}">{{prefix}}</view>
    
    <!-- 后缀 -->
    <view class="count-num-suffix" wx:if="{{suffix}}">{{suffix}}</view>
  </view>
</view> 