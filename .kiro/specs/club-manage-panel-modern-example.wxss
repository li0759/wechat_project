/* ========================================
 * Club Manage Panel - 现代化设计示例
 * 基于新的设计系统规范
 * ======================================== */

.club-manage-panel {
  /* 使用新的颜色系统 */
  --primary: #DF76B0;
  --primary-dark: #C85A9E;
  --primary-light: rgba(223, 118, 176, 0.1);
  --primary-gradient: linear-gradient(135deg, #DF76B0 0%, #C85A9E 100%);
  
  --bg-page: #F8F9FB;
  --bg-card: #FFFFFF;
  --bg-secondary: #F2F4F7;
  --bg-hover: #F7F8FA;
  
  --text-primary: #1A1D1F;
  --text-secondary: #6F767E;
  --text-tertiary: #9A9FA5;
  
  --success: #10B981;
  --error: #EF4444;
  --info: #3B82F6;
  
  --border-light: #E5E7EB;
  --border-medium: #D1D5DB;
  
  /* 使用新的阴影系统 */
  --shadow-sm: 0 2rpx 4rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 8rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 8rpx 16rpx rgba(0, 0, 0, 0.1), 0 4rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-primary: 0 4rpx 12rpx rgba(223, 118, 176, 0.25);
  
  background-color: var(--bg-page);
  color: var(--text-primary);
  height: 100%;
  overflow: hidden;
  position: relative;
}

/* ========================================
 * 管理行组件 - 现代化升级
 * ======================================== */
.row {
  background: var(--bg-card);
  border-radius: 20rpx;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-light);
  padding: 0 20rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.2s ease;
  overflow: hidden;
}

.row:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.row-100 {
  height: 100rpx;
}

/* 行标签 - 添加左侧强调条 */
.row-label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.row-label::before {
  content: '';
  width: 6rpx;
  height: 28rpx;
  background: var(--primary-gradient);
  border-radius: 6rpx;
}

.row-value {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* ========================================
 * 面板组件 - 现代化升级
 * ======================================== */
.panel {
  background: var(--bg-card);
  border-radius: 24rpx;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-light);
  overflow: hidden;
  margin-bottom: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.panel:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

.panel-300 {
  height: 300rpx;
}

/* 面板头部 - 添加渐变背景 */
.panel-header {
  padding: 20rpx;
  background: linear-gradient(135deg, #F8F9FB 0%, #FFFFFF 100%);
  border-bottom: 1px solid var(--border-light);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 图标容器 - 添加主题色背景 */
.panel-title-icon {
  width: 48rpx;
  height: 48rpx;
  background: var(--primary-gradient);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: var(--shadow-primary);
}

.panel-hint {
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.panel-body {
  padding: 20rpx;
}

/* ========================================
 * 按钮组件 - 现代化升级
 * ======================================== */

/* 主按钮 */
.btn-primary {
  background: var(--primary-gradient);
  color: white;
  border: none;
  border-radius: 9999rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: var(--shadow-primary);
  transition: all 0.2s ease;
}

.btn-primary:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 20rpx rgba(223, 118, 176, 0.3);
}

/* 次级按钮 */
.btn-secondary {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border: 1px solid var(--border-light);
  border-radius: 9999rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn-secondary:active {
  background: var(--bg-hover);
  transform: scale(0.96);
}

/* 图标按钮 */
.btn-icon {
  width: 72rpx;
  height: 72rpx;
  background: var(--bg-card);
  border: 1px solid var(--border-light);
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.btn-icon:active {
  transform: scale(0.9);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

/* ========================================
 * 卡片组件 - 现代化升级
 * ======================================== */
.card-modern {
  background: var(--bg-card);
  border-radius: 20rpx;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-light);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-modern:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

.card-modern-content {
  padding: 16rpx;
}

.card-modern-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.card-modern-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* ========================================
 * 头像组件 - 现代化升级
 * ======================================== */
.avatar-modern {
  position: relative;
  border-radius: 9999rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 2px solid white;
}

.avatar-modern-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border: 2px solid white;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-md);
}

/* 头像组 */
.avatar-modern-group {
  display: flex;
  align-items: center;
}

.avatar-modern-group .avatar-modern {
  margin-left: -16rpx;
  transition: all 0.2s ease;
}

.avatar-modern-group .avatar-modern:first-child {
  margin-left: 0;
}

.avatar-modern-group .avatar-modern:active {
  transform: translateY(-8rpx);
  z-index: 10;
}

/* ========================================
 * 状态标签 - 现代化升级
 * ======================================== */
.status-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-tag-success {
  background: #D1FAE5;
  color: #10B981;
}

.status-tag-error {
  background: #FEE2E2;
  color: #EF4444;
}

.status-tag-info {
  background: #DBEAFE;
  color: #3B82F6;
}

.status-tag-warning {
  background: #FEF3C7;
  color: #F59E0B;
}

/* ========================================
 * FAB 按钮 - 现代化升级
 * ======================================== */
.fab {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: var(--primary-gradient);
  border-radius: 9999rpx;
  box-shadow: 0 8rpx 24rpx rgba(223, 118, 176, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  z-index: 1000;
}

.fab:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 12rpx rgba(223, 118, 176, 0.3);
}

/* ========================================
 * 空状态 - 现代化升级
 * ======================================== */
.empty-state {
  padding: 120rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-state-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-state-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.empty-state-desc {
  font-size: 26rpx;
  color: var(--text-tertiary);
  line-height: 1.5;
}

/* ========================================
 * 加载状态 - 现代化升级
 * ======================================== */
.loading-container {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* ========================================
 * 工具类
 * ======================================== */

/* 文本截断 */
.clamp-1 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
}

.clamp-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}

/* 过渡动画 */
.transition-standard {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.transition-fast {
  transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 触摸反馈 */
.touchable:active {
  transform: scale(0.96);
  opacity: 0.8;
}
