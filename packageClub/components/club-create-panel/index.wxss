/* club-create-panel：组件样式（移除页面级导航栏占位） */

page {
  --md-sys-color-primary: #DF76B0;
  --md-sys-color-primary-dark: #C85A9E;
  --md-sys-color-primary-light: rgba(223, 118, 176, 0.1);
  --md-sys-color-on-primary: #ffffff;
  --md-sys-color-surface: #FFFFFF;
  --md-sys-color-on-surface: #1A1D1F;
  --md-sys-color-surface-variant: #F2F4F7;
  --md-sys-color-on-surface-variant: #6F767E;
  --md-sys-color-background: #F8F9FB;

  --md-sys-elevation-1: 0 2rpx 4rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  --md-sys-elevation-2: 0 4rpx 8rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  --md-sys-shape-corner-medium: 16rpx;

  background-color: var(--md-sys-color-background);
  color: var(--md-sys-color-on-surface);
}

.page {
  min-height: 100vh;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: var(--md-sys-color-surface);
  border-bottom: 1rpx solid #E5E7EB;
  z-index: 3000;
  box-sizing: border-box;
}
.custom-nav-inner {
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  box-sizing: border-box;
}
.custom-nav-back {
  width: 88rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.custom-nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
}
.custom-nav-right {
  width: 88rpx;
  height: 100%;
}
.custom-nav-spacer {
  width: 100%;
}

.page-scroll {
  height: calc(100vh - var(--nav-h, 0px));
}

.rows {
  padding: 16rpx 16rpx 24rpx;
  box-sizing: border-box;
}

/* 行 */
.row {
  background: var(--md-sys-color-surface);
  border-radius: 12rpx;
  box-shadow: var(--md-sys-elevation-1);
  border: 1rpx solid #E5E7EB;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  transition: all 0.3s;
}

.row-editable {
  cursor: pointer;
}

.row-editable:active {
  background: var(--md-sys-color-surface-variant);
  border-color: var(--md-sys-color-primary);
  transform: scale(0.98);
}
.row-100 { height: 100rpx; }
.row-300 { height: 300rpx; }

.row-basic {
  padding: 18rpx 20rpx;
  align-items: flex-start;
}
.row-basic-left {
  flex: 0 0 auto;
  min-width: 140rpx;
  padding-top: 6rpx;
}
.row-basic-right {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.row-basic-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
}
.row-basic-desc {
  font-size: 26rpx;
  color: #6F767E;
}
.row-basic-arrow {
  flex: 0 0 auto;
  margin-top: 6rpx;
}
.row-left {
  flex: 0 0 auto;
  min-width: 180rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.edit-hint {
  font-size: 20rpx;
  color: var(--md-sys-color-primary);
  margin-top: 4rpx;
  font-weight: 500;
}
.row-right {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 10rpx;
}
.row-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
}
.row-value {
  max-width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: var(--md-sys-color-on-surface);
}
.muted { color: #9A9FA5; }

/* split row */
.split-row {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 16rpx;
}
.split-half { width: 350rpx; }

/* panel */
.panel {
  width: 350rpx;
  height: 300rpx;
  background: var(--md-sys-color-surface);
  border-radius: 16rpx;
  box-shadow: var(--md-sys-elevation-1);
  border: 1rpx solid #E5E7EB;
  padding: 18rpx 18rpx 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transition: all 0.3s;
}

.panel:active {
  border-color: var(--md-sys-color-primary);
  box-shadow: var(--md-sys-elevation-2);
  transform: scale(0.98);
}
.panel-wide {
  width: 100%;
}
.panel-people {
  width: 700rpx;
  height: 800rpx;
  margin: 0 auto 16rpx;
}
.panel-300 { height: 300rpx; }
.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 12rpx;
  flex-shrink: 0;
}
.panel-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
}
.panel-hint {
  font-size: 22rpx;
  color: var(--md-sys-color-primary);
  font-weight: 500;
}
.panel-body {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.mini-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}
.mini-k { font-size: 24rpx; color: #6F767E; }
.mini-v {
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface);
  max-width: 210rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cover-preview {
  flex: 1;
  min-height: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: var(--md-sys-color-surface-variant);
}
.cover-img { width: 100%; height: 100%; }

.panel-map-empty {
  flex: 1;
  margin: 0 16rpx 16rpx;
  border-radius: 12rpx;
  background: var(--md-sys-color-surface);
  border: 2rpx dashed #D1D5DB;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
.panel-map-empty-text {
  font-size: 24rpx;
  color: #9A9FA5;
  font-weight: 500;
}

/* popup shell */
.popup-shell {
  padding: 24rpx;
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 18rpx;
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid #E5E7EB;
}
.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
}
.popup-body {
  flex: 1;
  overflow: hidden;
}
.popup-footer { padding-top: 18rpx; }
.form-group { margin-bottom: 18rpx; }
.form-label {
  font-size: 26rpx;
  color: #6F767E;
  margin-bottom: 10rpx;
  font-weight: 500;
}
.clamp-1,
.clamp-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.clamp-1 { -webkit-line-clamp: 1; }
.clamp-2 { -webkit-line-clamp: 2; }

/* 固定底部操作栏（对齐设计系统规范）*/
.step-navigation {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 20rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 1000;
}

.nav-buttons {
  display: flex;
  gap: 12rpx;
}

.nav-btn {
  flex: 1;
  height: 88rpx;
  background: var(--md-sys-color-primary);
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(223, 118, 176, 0.25);
  border: none;
}

.nav-btn::after {
  border: none;
}

.nav-btn:active {
  background: var(--md-sys-color-primary-dark);
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(223, 118, 176, 0.3);
}

/* ===== create 专用：隐藏 trigger（仅用于通过 JS expand/collapse 打开弹窗） ===== */
.cc-hidden-trigger { width: 0; height: 0; overflow: hidden; }

/* ===== create 专用：人员管理头像条 ===== */
.people-strip {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
  align-items: flex-start;
}
.people-item {
  width: 96rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.people-avatar-wrap {
  position: relative;
  width: 72rpx;
  height: 72rpx;
}

.people-avatar-trigger {
  width: 72rpx;
  height: 72rpx;
}
.people-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #eee;
}
.people-plus {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 2rpx dashed var(--md-sys-color-primary);
  background: var(--md-sys-color-primary-light);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42rpx;
  color: var(--md-sys-color-primary);
  font-weight: 600;
  transition: all 0.3s;
}

.people-plus:active {
  background: rgba(223, 118, 176, 0.2);
  transform: scale(0.95);
}
.people-star {
  position: absolute;
  right: -6rpx;
  top: -6rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #ff6b9d;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

/* 会长标识（皇冠） */
.people-crown-badge {
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fff5f8 0%, #ffe0eb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(223, 118, 176, 0.25);
}
.people-label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: var(--md-sys-color-on-surface);
  max-width: 96rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.panel-desc-text {
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface);
  line-height: 1.5;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
}

/* ===== 成员详情弹窗样式（van-popup） ===== */
.member-detail-popup {
  padding: 40rpx;
  text-align: center;
  background: var(--md-sys-color-surface);
  border-radius: 16rpx;
}
.member-detail-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 24rpx;
  display: block;
}
.member-detail-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--md-sys-color-on-surface);
  margin-bottom: 8rpx;
}
.member-detail-role {
  font-size: 26rpx;
  color: #6F767E;
  margin-bottom: 24rpx;
}
.member-detail-info {
  text-align: left;
  margin-bottom: 24rpx;
}
.member-detail-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #6F767E;
}
.member-detail-id {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
}
.member-detail-actions {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #E5E7EB;
}
.member-action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s;
  min-width: 120rpx;
}
.member-action-btn text {
  font-size: 26rpx;
}
.member-action-btn.add-member {
  background: #52c41a;
  color: white;
}
.member-action-btn.remove {
  background: #ff4d4f;
  color: white;
}
.member-action-btn.disabled {
  background: #f0f0f0;
  color: #999;
}
.member-action-change {
  background: var(--md-sys-color-primary-light);
  color: var(--md-sys-color-primary);
}

.member-action-change:active {
  background: rgba(223, 118, 176, 0.2);
  transform: scale(0.98);
}

.member-action-remove {
  background: #FEE2E2;
  color: #EF4444;
}

.member-action-remove:active {
  background: #FECACA;
  transform: scale(0.98);
}
.member-action-btn-hover {
  background: #389e0d !important;
  transform: scale(0.98);
}
.member-action-btn-remove-hover {
  background: #d32029 !important;
  transform: scale(0.98);
}

