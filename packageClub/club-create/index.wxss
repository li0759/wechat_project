/* packageClub/club-create/index.wxss */

/* 协会创建页 - 简洁现代化设计 */
page {
  background: linear-gradient(135deg, #fdf8fd 0%, #f9f4f9 100%);
  min-height: 100vh;
}

/* 基础容器 */
.modern-container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 主滚动区域 */
.main-scroll {
  flex: 1;
  padding-top: calc(88rpx + env(safe-area-inset-top));
  padding-bottom: 140rpx;
}

/* 信息展示区 */
.info-section {
  padding: 0 24rpx 24rpx;
}

/* 卡片通用样式 */
.card {
  margin-bottom: 24rpx;
}

/* 创建信息卡片 */
.create-info-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

/* 创建信息网格 */
.create-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

/* 信息项基础样式 */
.create-info-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
  min-height: 80rpx;
}

.create-info-item:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #fce7f3, #fbcfe8);
}

/* 单个块 */
.create-info-item.single-block {
  grid-column: span 1;
}

/* 双倍宽度 */
.create-info-item.double-width {
  grid-column: span 2;
}

/* 双倍高度 */
.create-info-item.double-height {
  min-height: 160rpx;
  align-items: flex-start;
}

.create-info-content {
  flex: 1;
  min-width: 0;
}

.create-info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.create-info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  word-break: break-all;
  line-height: 1.4;
}

.create-info-value.description-text {
  font-size: 26rpx;
  line-height: 1.5;
  max-height: 120rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

/* 会长选择样式 */
.selected-leader {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.leader-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 107, 157, 0.2);
}

.leader-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 操作区 */
.action-section {
  margin-top: 40rpx;
  padding: 0 24rpx;
  margin-bottom: 40rpx;
}

.actions-container {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  min-height: 88rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d, #ec4899);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.3);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  color: #6b7280;
  box-shadow: 0 8rpx 32rpx rgba(229, 231, 235, 0.3);
}

.action-btn.secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(229, 231, 235, 0.4);
}

.action-btn.disabled {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  color: #9ca3af;
  box-shadow: none;
  opacity: 0.6;
}

.action-btn.disabled:active {
  transform: none;
}

/* 弹窗样式 */
.popup-container {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  min-height: 35vh;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.1);
  flex-shrink: 0;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.popup-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

/* 图片弹窗样式 */
.images-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 107, 157, 0.05);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #ff6b9d;
  flex-shrink: 0;
}

/* 弹窗操作按钮样式 */
.popup-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.popup-actions .action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
}

.popup-actions .action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
}

.popup-actions .action-btn.primary:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #ff5a8a, #ff7d9a);
}

.popup-actions .action-btn.danger {
  background: linear-gradient(135deg, #ff4757, #ff6b7a);
  color: white;
}

.popup-actions .action-btn.danger:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #ff3742, #ff5a6b);
}

.popup-actions .action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.popup-actions .action-btn.secondary:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.popup-actions .action-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 搜索区域样式 */
.search-section {
  margin-bottom: 24rpx;
}

/* 搜索结果样式 */
.search-results {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 24rpx;
}

.search-result-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.05);
  transition: all 0.3s ease;
}

.search-result-item:active {
  background: #fdf2f8;
  border-color: rgba(255, 107, 157, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 107, 157, 0.1);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #999;
}

/* 用户右侧信息区域 */
.user-right-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

/* 用户协会标签 - 显示在右边 */
.user-clubs-tag {
  max-width: 300rpx;
}

.clubs-summary {
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  line-height: 1.2;
  display: inline-block;
  max-width: 100%;

}


.select-user-btn {
  width: 48rpx;
  height: 48rpx;
  background: #fdf2f8;
  border: 2rpx solid #ff6b9d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.select-user-btn:active {
  background: #ff6b9d;
  transform: scale(0.9);
}

/* 已选择的会长显示 */
.selected-leader-display {
  margin-bottom: 24rpx;
}

.selected-leader-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
}

.selected-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 107, 157, 0.2);
}

.selected-info {
  flex: 1;
}

.selected-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.selected-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.clear-selection {
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
}

.clear-selection:active {
  background: rgba(255, 107, 157, 0.2);
}

/* 动画效果 */
.fade-in-up {
  animation: fadeInUp 0.6s ease-out;
}

.fade-in-up-delay-1 {
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.fade-in-up-delay-2 {
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.fade-in-up-delay-3 {
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 拖拽图片组件样式覆盖 */
.drag-img-container {
  margin-top: 20rpx;
}

.drag-img-item {
  border-radius: 12rpx !important;
  overflow: hidden !important;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .create-info-grid {
    grid-template-columns: 1fr;
  }
  
  .create-info-item.double-width {
    grid-column: span 1;
  }
  
  .popup-content {
    padding: 20rpx 24rpx 24rpx;
  }
}

/* 自定义弹窗样式类 */
.club-name-popup .van-popup,
.leader-popup .van-popup,
.description-popup .van-popup,
.charter-popup .van-popup,
.image-popup .van-popup {
  background: transparent;
}

/* 字段样式覆盖 */
.popup-content .van-field {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.popup-content .van-field__input {
  font-size: 28rpx;
  line-height: 1.5;
}

.popup-content .van-field--textarea .van-field__input {
  min-height: 120rpx;
}

/* 会长选择弹窗特殊样式 */
.leader-popup .popup-container {
  min-height: 60vh;
  max-height: 70vh;
}

.leader-popup .popup-content {
  max-height: calc(60vh - 120rpx);
  overflow-y: auto;
}