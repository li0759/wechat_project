/* pages/profile/about/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  padding: 30rpx 10rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 内容区域 */
.about-content {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 应用信息 */
.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0 50rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.app-version {
  font-size: 26rpx;
  color: #999;
}

/* 介绍部分 */
.about-section {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.about-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  height: 30rpx;
  width: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 功能特点 */
.section-content {
  display: flex;
  flex-wrap: wrap;
}

.feature-item {
  width: 50%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

/* 联系方式 */
.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.contact-text {
  font-size: 28rpx;
  color: #666;
}

/* 页脚 */
.about-footer {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}