/* pages/profile/club-applications/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  padding: 30rpx 10rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

/* 标签选项卡 */
.tab-header {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1890ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

.tab-badge {
  display: inline-block;
  background-color: #f5222d;
  color: #fff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 32rpx;
  text-align: center;
  vertical-align: middle;
  margin-left: 8rpx;
}

/* 申请列表 */
.application-list {
  padding-bottom: 30rpx;
}

.application-item {
  margin-bottom: 20rpx;
}

.application-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.apply-time {
  font-size: 24rpx;
  color: #999;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status-approved {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-rejected {
  background-color: #fff1f0;
  color: #f5222d;
}

/* 申请内容 */
.application-content {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.content-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 处理信息 */
.process-info {
  font-size: 24rpx;
  color: #999;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.process-time, .process-admin {
  margin-bottom: 8rpx;
}

.reject-reason {
  margin-top: 16rpx;
}

.reason-title {
  font-weight: 500;
  color: #666;
  margin-bottom: 8rpx;
}

.reason-text {
  color: #f5222d;
}

/* 操作按钮 */
.application-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.reject-btn, .approve-btn {
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
  margin-left: 20rpx;
}

.reject-btn {
  background-color: #f5f5f5;
  color: #666;
}

.approve-btn {
  background-color: #1890ff;
  color: #fff;
}

/* 拒绝原因弹窗 */
.reject-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(223, 118, 176, 0.8);
  z-index: 100;
}

.reject-dialog {
  position: fixed;
  left: 50rpx;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 101;
}

.reject-dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.reject-dialog-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.reject-dialog-close {
  width: 40rpx;
  height: 40rpx;
}

.reject-dialog-close image {
  width: 100%;
  height: 100%;
}

.reject-dialog-content {
  padding: 30rpx;
  position: relative;
}

.reject-dialog-content textarea {
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.textarea-counter {
  position: absolute;
  right: 50rpx;
  bottom: 50rpx;
  font-size: 24rpx;
  color: #999;
}

.reject-dialog-footer {
  display: flex;
  padding: 0 30rpx 30rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

.confirm-btn {
  background-color: #f5222d;
  color: #fff;
} 