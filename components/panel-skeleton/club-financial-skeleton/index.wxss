.skeleton-container {
  padding-top: 24rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.skeleton-stats {
  display: flex;
  gap: 20rpx;
  padding: 32rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.skeleton-stat-card {
  flex: 1;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.skeleton-charts {
  padding: 0 32rpx;
}

.skeleton-chart-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.skeleton-chart-title {
  margin-bottom: 24rpx;
}

.skeleton-chart-content {
  width: 100%;
}
