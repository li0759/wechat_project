.ab-user-main {
  display: flex;
  align-items: center;
  gap: 14rpx;
  min-width: 0;
}

.ab-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f5f5f5;
}

.ab-user-text {
  min-width: 0;
}

.ab-user-name-compact {
  font-size: 28rpx;
  color: #222;
  font-weight: 600;
}

.ab-user-meta {
  margin-top: 4rpx;
  color: #666;
  font-size: 22rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 460rpx;
}

.ab-btn {
  padding: 10rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(102, 126, 234, 0.08);
}

.ab-enter {
  animation: abSlideDown 180ms ease-out both;
}

@keyframes abSlideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ab-leave {
  animation: abSlideUp 160ms ease-in both;
}

@keyframes abSlideUp {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(-10rpx);
  }
}

.ab-avatar-trigger {
  width: 72rpx;
  height: 72rpx;
}

/* 用户详情弹窗（对齐搜索用户的 expandable-container 弹窗观感） */
.ab-expanded-content {
  position: relative;
  z-index: 10;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.ab-user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ab-user-avatar-section {
  flex-shrink: 0;
}

.ab-user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  border: 2rpx solid #e8e8e8;
}

.ab-user-info-section {
  flex: 1;
  min-width: 0;
}

.ab-user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ab-user-details {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.ab-user-department {
  font-size: 26rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.ab-user-position {
  font-size: 26rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.ab-user-detail-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.ab-user-info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.ab-user-info-item:last-child {
  border-bottom: none;
}

.ab-user-info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.ab-user-info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  max-width: 360rpx;
  text-align: right;
}

.ab-user-actions {
  margin-top: 8rpx;
  display: flex;
  gap: 16rpx;
  justify-content: center;
  align-items: center;
}

.ab-action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1;
}

.ab-action-btn::after {
  border: none;
}

.ab-added-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #52c41a;
  font-size: 26rpx;
  font-weight: 600;
}

/* =========================
 * 添加成员（am- 前缀）
 * 全屏 sheet + 搜索/通讯录
 * ========================= */
.am-sheet {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  box-sizing: border-box;
}

.am-header {
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.am-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.am-title {
  font-size: 34rpx;
  font-weight: 900;
  color: #1f1a1c;
}

.am-close {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: #f2f3f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.am-close:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.am-subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.am-body {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.am-tab-panel {
  height: 100%;
  min-height: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.am-search {
  padding: 14rpx 16rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
  background: #fff;
}

.am-results {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.am-results-head {
  padding: 14rpx 16rpx 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-shrink: 0;
}

.am-results-title {
  font-size: 26rpx;
  font-weight: 800;
  color: #222;
}

.am-results-count {
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  background: rgba(102, 126, 234, 0.14);
  color: #667eea;
  font-size: 22rpx;
  font-weight: 700;
}

.am-results-scroll {
  flex: 1;
  min-height: 0;
  padding: 12rpx 16rpx 28rpx;
  box-sizing: border-box;
}

.am-user-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 18rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
  padding: 16rpx 16rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
}

.am-user-row-compact {
  box-shadow: none;
  border-radius: 14rpx;
}

.am-user-left {
  display: flex;
  align-items: center;
  gap: 14rpx;
  min-width: 0;
  flex: 1;
}

.am-avatar-trigger {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  overflow: hidden;
}

.am-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f2f3f5;
}

.am-user-text {
  min-width: 0;
  flex: 1;
}

.am-user-name {
  font-size: 30rpx;
  font-weight: 800;
  color: #222;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.am-user-meta {
  margin-top: 6rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  min-height: 28rpx;
}

.am-meta {
  font-size: 22rpx;
  color: #666;
  background: rgba(0, 0, 0, 0.04);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.am-user-phone {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #999;
}

.am-user-right {
  flex-shrink: 0;
  padding-left: 10rpx;
}

.am-icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: rgba(102, 126, 234, 0.10);
  display: flex;
  align-items: center;
  justify-content: center;
}

.am-icon-ok {
  background: rgba(82, 196, 26, 0.12);
}

.am-empty {
  padding: 60rpx 0;
}

.am-empty-pad {
  padding: 80rpx 0;
}

/* 用户详情弹窗（对齐“搜索结果”的用户详情风格） */
