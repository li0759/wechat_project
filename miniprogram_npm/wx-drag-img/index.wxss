.drag-container {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  z-index: 4;
}

/* 拖拽项基础样式 */
.drag-item {
  position: absolute;
  width: 100px;
  height: 100px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  background-color: #f0f0f0;
  z-index: 4;
}

/* 拖拽过渡动画 */
.drag-item-transition {
  transition: transform 0.3s ease;
}

/* 图片样式 */
.drag-item-img {
  width: 100%;
  height: 100%;
  z-index: 4;
  object-fit: cover;
}

/* 加载状态图标 */
.drag-item-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 4;
}

/* 删除按钮 */
.drag-item-delete {
  position: absolute;
  top: 0px;
  right: 0px;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color:  rgb(255, 255, 255);
  background-color: rgb(223, 118, 176);
  justify-content: center;
  display: flex;
  z-index: 5;
}

.drag-item-delete_default {
  font-weight: bold;
  transform: scale(1.2);
}

/* 标签样式 */
.drag-item-label {
  position: absolute;
  bottom: 0;
  width: 60%;
  font-size: 11px;
  color: #fff;
  display: flex; 
  justify-content: center;
  align-items: center;
  flex-direction:row;
  z-index: 3;
}

/* 封面标签样式 */
.drag-item-label-cover {

}

/* 新增标签样式 */
.drag-item-label-new {
  background-color: rgb(141, 115, 129);
}

/* 已有标签样式 */
.drag-item-label-existing {
  background-color: rgb(223, 118, 176);
}

/* 上传按钮样式 */
.drag-upload {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  border: 1px dashed #ddd;
  box-shadow: none;
}

.drag-upload_default {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 36px;
}

.drag-upload_default text {
  font-weight: bold;
}

.drag-upload_slot {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}