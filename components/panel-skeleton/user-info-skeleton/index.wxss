/* components/panel-skeleton/user-info-skeleton/index.wxss */
.user-info-skeleton {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

.skeleton-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.skeleton-avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.skeleton-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
