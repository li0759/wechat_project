/* 协会详情面板样式 - 复刻 club-detail 页面 */
.club-detail-panel {
  position: relative;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  overflow: hidden;
}

/* 灰色蒙层样式 */
.disabled-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: all;
}

.disabled-overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  margin: 40rpx;
}

.disabled-overlay-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

.disabled-overlay-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-top: 8rpx;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: #fff;
}

.loading-text,
.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* 分段导航 */
.section-nav {
  flex-shrink: 0;
  z-index: 100;
  background: linear-gradient(180deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.85) 100%);
  backdrop-filter: blur(10rpx);
}

.nav-scroll {
  height: 88rpx;
}

.nav-content {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
  white-space: nowrap;
}

.nav-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  padding: 0 24rpx;
  margin-right: 24rpx;
  font-size: 28rpx;
  color: rgba(0,0,0,0.6);
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.nav-item.active {
  background-color: #ff6b9d;
  color: #fff;
  font-weight: 500;
}

/* 主内容区域 - 使用 calc 计算高度 */
.main-content {
  height: calc(100vh - 200rpx - 88rpx - 140rpx);
  padding-bottom: 140rpx;
  -webkit-overflow-scrolling: touch;
}

/* 通用区域样式 */
.section {
  margin-bottom: 24rpx;
}

.section-header {
  padding: 32rpx 32rpx 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 封面轮播 */
.cover-section {
  position: relative;
  margin-bottom: 0;
}

.cover-swiper {
  width: 100%;
  height: 500rpx;
}

.cover-img {
  width: 100%;
  height: 100%;
}

.thumbnail-indicators {
  position: absolute;
  bottom: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.thumb-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  overflow: hidden;
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.thumb-item.active {
  opacity: 1;
  box-shadow: 0 0 0 2rpx #ff6b9d;
}

.thumb-img {
  width: 100%;
  height: 100%;
}

/* 协会信息卡片 */
.info-section {
  background: #f5f5f5;
}

.info-card {
  background: #f8f8f8;
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  border-radius: 16rpx;
}

.club-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.club-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.info-row:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.info-content {
  flex: 1;
  margin-left: 16rpx;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 会长信息 */
.president-info {
  display: flex;
  align-items: center;
}

/* 协会人员区域 */
.members-section {
  background: #f5f5f5;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -24rpx;
  position: relative;
  z-index: 10;
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx 24rpx;
}

.member-item {
  width: 16.66%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
}

.member-name {
  font-size: 22rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.empty-members,
.empty-activities {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #999;
  font-size: 28rpx;
}

/* 最近活动区域 */
.activities-section {
  background: #f0f0f0;
}

.activities-list {
  padding: 0 32rpx 32rpx;
}

.activity-item {
  position: relative;
  background: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  overflow: hidden;
}

.activity-item:active {
  transform: scale(0.98);
}

/* 地图背景 */
.activity-map-bg {
  position: absolute;
  top: 0;
  right: 0;
  width: 500rpx;
  height: 350rpx;
  z-index: 1;
  border-radius: 0 16rpx 16rpx 0;
  overflow: hidden;
}

.map-bg-image {
  width: 100%;
  height: 100%;
  opacity: 1;
}

.map-fade-left {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 120rpx;
  background: linear-gradient(90deg, rgba(248,248,248,1) 0%, rgba(248,248,248,0.85) 35%, rgba(248,248,248,0.4) 70%, rgba(248,248,248,0) 100%);
  pointer-events: none;
}

.map-fade-bottom {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background: linear-gradient(0deg, rgba(248,248,248,1) 0%, rgba(248,248,248,0.85) 35%, rgba(248,248,248,0.4) 70%, rgba(248,248,248,0) 100%);
  pointer-events: none;
}

.map-fade-corner {
  position: absolute;
  left: -40rpx;
  bottom: -40rpx;
  width: 220rpx;
  height: 220rpx;
  background: radial-gradient(closest-side, rgba(248,248,248,1) 0%, rgba(248,248,248,0.85) 45%, rgba(248,248,248,0.35) 75%, rgba(248,248,248,0) 100%);
  pointer-events: none;
}

/* 活动内容 */
.activity-content {
  position: relative;
  z-index: 2;
  border-radius: 12rpx;
  padding: 10rpx;
  margin-bottom: 5rpx;
  min-height: 200rpx;
}

.activity-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.activity-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #666;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 160rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: linear-gradient(0deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.9) 70%, transparent 100%);
  backdrop-filter: blur(20rpx);
}

.action-left {
  display: flex;
  gap: 16rpx;
}

.action-right {
  display: flex;
  gap: 16rpx;
  flex: 1;
  justify-content: flex-end;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  padding: 0 32rpx;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff4778 100%);
  color: #fff;
}

.action-btn.secondary {
  background: rgba(0,0,0,0.05);
  color: #666;
}

.action-btn.disabled {
  background: rgba(0,0,0,0.05);
  color: #999;
}

.action-btn.danger {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
  gap: 8rpx;
}

.action-btn:active {
  transform: scale(0.95);
}
