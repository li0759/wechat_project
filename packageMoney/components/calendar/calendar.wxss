/* 日历容器 */
.custom-calendar {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  overflow: hidden;
}

/* 日历头部 */
.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1px solid #f5f5f5;
}

.calendar-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
}

.calendar-title van-icon {
  margin-left: 10rpx;
}

.calendar-nav {
  display: flex;
  align-items: center;
}

.nav-item {
  padding: 10rpx 20rpx;
  color: #666;
}

/* 星期栏 */
.calendar-weeks {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
  background-color: #f8f8f8;
}

.week-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 日期格子 */
.calendar-days {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 0;
}

.day-item {
  width: 14.285%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}

.day-empty {
  background-color: transparent;
}

.day-content {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  border-radius: 50%;
}

.day-text {
  font-size: 28rpx;
  color: #333;
}

/* 今天样式 */
.day-today .day-content {
  background-color: rgba(255, 79, 129, 0.1);
}

.day-today .day-text {
  color: #ff4f81;
  font-weight: bold;
}

/* 选中日期样式 */
.day-selected .day-content {
  background-color: #ff4f81;
}

.day-selected .day-text {
  color: #fff;
}

/* 有事件的日期样式 */
.day-has-events .day-content {
  background-color: #ffebef;
}

/* 事件角标 */
.event-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  background-color: #ff4f81;
  color: #fff;
  font-size: 20rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
}

/* 日历底部 */
.calendar-footer {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1px solid #f5f5f5;
}

/* 年月选择器样式 */
.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-actions {
  display: flex;
  gap: 20rpx;
}

.year-month-picker {
  width: 100%;
  height: 500rpx;
}

.picker-item {
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 28rpx;
}

/* 事件弹窗样式 */
.event-popup {
  width: 80% !important;
  height: 80% !important;
  max-width: 600rpx;
  max-height: 800rpx;
}

.event-popup-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.event-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.event-popup-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.event-popup-content {
  flex: 1;
  overflow-y: auto;
  padding: 0 30rpx;
}

.event-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.event-item:last-child {
  border-bottom: none;
}

.event-item-container {
  display: flex;
  align-items: center;
}

.event-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.event-image .event-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.event-info {
  flex: 1;
}

.event-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.event-time {
  font-size: 24rpx;
  color: #999;
}

.empty-events {
  padding: 50rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

