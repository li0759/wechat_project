/* 骨架屏容器 */
.skeleton-container {
  padding: 24rpx;
  padding-top: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 骨架屏列表 */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 申请卡片骨架 */
.skeleton-application-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 摘要骨架 */
.skeleton-summary {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.skeleton-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.skeleton-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
