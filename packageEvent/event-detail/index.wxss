/* 活动详情页 - 简洁现代化设计 */
page {
  background: linear-gradient(135deg, #fdf8fd 0%, #f9f4f9 100%);
  min-height: 100vh;
}

/* 基础容器 */
.modern-container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 主滚动区域 */
.main-scroll {
  flex: 1;
  padding-top: calc(88rpx + env(safe-area-inset-top));
  padding-bottom: 20rpx; /* 移除为固定操作区预留的空间 */
}

/* 信息展示区 */
.info-section {
  padding: 0 24rpx 24rpx;
}

/* 图片轮播 - 2.5个项目显示 */
.images-swiper {
  padding-top: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.images-swiper-container {
  height: 200rpx;
  border-radius: 24rpx;
  overflow: visible; /* 允许超出部分显示 */
}

.images-swiper-item {
  padding: 0 8rpx; /* 减小间距以适应2.5项目显示 */
  box-sizing: border-box;
}

.image-wrapper {
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.15);
  transition: transform 0.3s ease;
}

.image-wrapper:active {
  transform: scale(0.95);
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 24rpx;
  right: 36rpx;
  z-index: 10;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  backdrop-filter: blur(10rpx);
}

.status-tag.active {
  background: linear-gradient(135deg, #4ade80, #22c55e);
}

.status-tag.ended {
  background: linear-gradient(135deg, #f87171, #ef4444);
}

/* 图片指示器 */
.images-indicator {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
}

.indicator-dots {
  display: flex;
  gap: 12rpx;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 32rpx;
  backdrop-filter: blur(10rpx);
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.indicator-dot.active {
  background: #ffffff;
  transform: scale(1.2);
}

/* 卡片通用样式 */
.card {
  margin-bottom: 24rpx;
}

/* 详细信息卡片 */
.detail-info-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.event-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 32rpx;
  letter-spacing: 0.5rpx;
}

/* 核心信息网格 */
.core-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.core-info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
}

.core-info-content {
  flex: 1;
  min-width: 0;
}

.core-info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.core-info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.3;
  word-break: break-all;
}

/* 基本信息段落文字样式 */
.basic-info-text {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-text-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 0;
}

.info-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.5;
  font-weight: 500;
}

/* 地图卡片 */
.location-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.location-map {
  position: relative;
  height: 300rpx;
  overflow: hidden;
}

.map-image {
  width: 100%;
  height: 100%;
}

.location-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 24rpx 24rpx;
  color: white;
}

.location-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.location-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 内容卡片 */
.content-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #444;
  letter-spacing: 0.3rpx;
}

/* 参与者卡片 */
.participants-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.participants-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.participants-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.participants-subtitle {
  font-size: 24rpx;
  color: #666;
}

.participants-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.participant-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.15);
}

.checkin-badge {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 28rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #4ade80, #22c55e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

.participant-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.more-participants {
  opacity: 0.7;
}

.more-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.more-text {
  font-size: 20rpx;
  color: #666;
  font-weight: 600;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b9d;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #ff6b9d, #e91e63);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 操作区 */
.action-section {
  height:300rpx;
  margin-top: 20rpx;
  padding: 0 8rpx;
}

.actions-container {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

/* 操作按钮 */
.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 88rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.action-btn text {
  font-weight: inherit;
}

/* 打卡按钮 */
.checkin-btn {
  background: linear-gradient(135deg, #4ade80, #22c55e);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(74, 222, 128, 0.3);
}

.checkin-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(74, 222, 128, 0.3);
}

.checkin-btn.disabled {
  background: linear-gradient(135deg, #d1d5db, #9ca3af);
  box-shadow: 0 4rpx 16rpx rgba(156, 163, 175, 0.2);
  transform: none;
}

/* 参加按钮 */
.join-btn {
  background: linear-gradient(135deg, #ff6b9d, #e91e63);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.3);
}

.join-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
}

/* 退出按钮 */
.quit-btn {
  background: white;
  color: #ff6b9d;
  border-color: #ff6b9d;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.15);
}

.quit-btn:active {
  transform: scale(0.95);
  background: rgba(255, 107, 157, 0.05);
}

/* 订阅按钮 */
.subscribe-btn {
  background: white;
  color: #6366f1;
  border-color: #6366f1;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.15);
}

.subscribe-btn:active {
  transform: scale(0.95);
  background: rgba(99, 102, 241, 0.05);
}

.subscribe-btn.subscribed {
  background: linear-gradient(135deg, #6366f1, #4f46e5);
  color: white;
  border-color: transparent;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.3);
}

/* 加入协会按钮 */
.join-club-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-color: transparent;
  box-shadow: 0 8rpx 32rpx rgba(16, 185, 129, 0.3);
}

.join-club-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #059669, #047857);
}

/* 移除固定操作区样式 */
.fixed-actions {
  display: none;
}

/* 空状态 */
.empty-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 50rpx;
}

.empty-state {
  text-align: center;
  opacity: 0.6;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 24rpx 0 12rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 50rpx;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
}

/* 动画效果 */
.fade-in-up {
  animation: fadeInUp 0.6s ease-out;
}

.fade-in-up-delay-1 {
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .core-info-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .participants-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .actions-container {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .action-btn {
    width: 100%;
  }
}
