/* 星期选择器样式 */
.select-day-container {
  width: 100%;
}

.selected-display {
  padding: 24rpx 32rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #ebedf0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 88rpx;
  box-sizing: border-box;
}

.selected-display.disabled {
  background: #f7f8fa;
  color: #c8c9cc;
}

.display-text {
  font-size: 28rpx;
  color: #323233;
  flex: 1;
}

.display-text.placeholder {
  color: #969799;
}

.display-text.disabled {
  color: #c8c9cc;
}

.arrow-icon {
  margin-left: 16rpx;
  transition: transform 0.3s;
}

.arrow-icon.disabled {
  color: #c8c9cc;
}

.select-day-popup {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 48rpx 32rpx 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.days-container {
  margin-bottom: 48rpx;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
}

/* 星期项目样式 - 默认未选中状态 */
.select-day-item {
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  background: #f7f8fa;
  border: 2rpx solid transparent;
}

/* 星期项目文字 - 默认未选中状态 */
.day-text {
  font-size: 28rpx;
  line-height: 1;
  pointer-events: none;
  color: #646566;
  font-weight: 400;
}

/* 选中状态样式 */
.select-day-item.selected {
  background: #ff6b9d;
  border-color: #ff6b9d;
}

.select-day-item.selected .day-text {
  color: #fff;
  font-weight: 600;
}

/* 悬停效果 */
.select-day-item:hover:not(.selected) {
  background: #ebedf0;
}

.popup-footer {
  display: flex;
  gap: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #ebedf0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f7f8fa;
  color: #646566;
  border: none;
}

.confirm-btn {
  background: #ff6b9d;
  color: #fff;
  border: none;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.selected-tag {
  padding: 8rpx 16rpx;
  background: #ff6b9d;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.empty-text {
  color: #999;
  font-size: 24rpx;
}

/* 确认按钮 */
.confirm-button {
  width: 100%;
  height: 88rpx;
  background: #ff6b9d;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.confirm-button:active {
  transform: scale(0.98);
  background: #e55a87;
}

.confirm-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
} 