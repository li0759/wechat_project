/* 页面容器 */
.container {
  padding: 10rpx;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo */
.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 0rpx;
}

.logo image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* 标题 */
.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 登录按钮 */
.login-btn {
  width: 500rpx;
  height: 80rpx;
  background: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: normal;
  margin-bottom: 10rpx;
  border: none;
}

.login-btn:hover {
  background: #0056cc;
}


/* 用户列表标题 */
.user-list-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 0rpx;
  text-align: center;
}

/* 用户列表 */
.user-list {
  width: 100%;
  max-height: 800rpx;
  background: white;
  border-radius: 8rpx;
  padding: 0;
  border: 1rpx solid #e0e0e0;
}

.no-data {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 26rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-item:last-child {
  border-bottom: none;
}

.user-item:hover {
  background-color: #f8f9fa;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.user-role-main {
  font-size: 22rpx;
  color: #666;
} 