.container {
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.logo image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.subtitle {
  font-size: 36rpx;
  color: white;
  margin-bottom: 80rpx;
  font-weight: bold;
}

/* 未登录状态 */
.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.login-tip {
  margin-bottom: 10rpx;
  padding: 10rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.login-tip text {
  color: white;
  font-size: 28rpx;
  text-align: center;
}

/* 已登录状态 */
.logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.user-info-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 30rpx;
  padding: 40rpx;
  margin: 60rpx 0;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

/* 状态图标 */
.status-icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.status-icon.success {
  background: #4caf50;
  color: white;
  top: -8rpx;
  right: -8rpx;
}

.status-icon.inline {
  position: static;
  display: inline-flex;
  width: 24rpx;
  height: 24rpx;
  font-size: 16rpx;
  margin-left: 8rpx;
  vertical-align: middle;
}

.info {
  text-align: center;
  width: 100%;
}

.name {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.department, .position {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

/* 手机号信息显示 */
.mobile-info {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.mobile-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.mobile-value {
  font-size: 26rpx;
  color: white;
  font-weight: bold;
}

.mobile-placeholder {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  font-style: italic;
}

/* 个人信息按钮区域 */
.profile-buttons {
  width: 600rpx;
  margin: 20rpx 0;
}

.profile-section {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-title {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  display: block;
  margin-bottom: 24rpx;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.profile-btn {
  width: 100%;
  height: 80rpx;
}

.completed-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(76, 175, 80, 0.2);
  border-radius: 12rpx;
  border: 2rpx solid rgba(76, 175, 80, 0.5);
}

.completed-text {
  color: #4caf50;
  font-size: 28rpx;
  font-weight: bold;
}

/* 信息完整提示区域 */
.complete-section {
  width: 600rpx;
  margin: 20rpx 0;
}

.complete-tip {
  background: rgba(76, 175, 80, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  text-align: center;
  border: 2rpx solid rgba(76, 175, 80, 0.3);
}

.complete-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.complete-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.action-btn {
  width: 500rpx;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: transparent;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.action-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.action-btn.secondary:hover {
  background: rgba(255, 255, 255, 0.1);
}

/* 开发者工具模式样式 */
.dev-title {
  color: white;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.dev-user-list {
  max-height: 60vh;
  overflow: auto;
}

.dev-user-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  padding: 12rpx;
}

.dev-user-item--hover {
  background: #f5f6fa;
}

.dev-user-item__left {
  display: flex;
  align-items: center;
}

.dev-user-item__info {
  margin-left: 12rpx;
}

.dev-user-item__name {
  font-size: 28rpx;
  font-weight: 600;
}

.dev-user-item__tags {
  margin-top: 4rpx;
  display: flex;
  flex-wrap: wrap;
}

/* 禁用状态的按钮样式 */
.t-button--disabled {
  opacity: 0.6;
  pointer-events: none;
} 