}

.cc-add-member-content .ab-added-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 0 0;
  color: #52c41a;
  font-size: 26rpx;
  font-weight: 600;
}

