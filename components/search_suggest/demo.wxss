/* 演示页面样式 */
.demo-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.demo-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  color: white;
}

.demo-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.demo-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 演示区块 */
.demo-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 搜索结果样式 */
.search-results {
  margin-top: 20rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.result-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: white;
  border-radius: 50%;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-content {
  flex: 1;
  min-width: 0;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.result-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
  word-break: break-all;
}

.result-tag {
  margin-left: 16rpx;
}

.tag-text {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 日志样式 */
.logs-container {
  max-height: 400rpx;
  overflow-y: auto;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.log-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #e9ecef;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.log-item:last-child {
  border-bottom: none;
}

.log-time {
  color: #999;
  font-size: 22rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  min-width: 120rpx;
}

.log-content {
  color: #333;
  font-size: 24rpx;
  line-height: 1.4;
  flex: 1;
  word-break: break-all;
}

/* 滚动条样式 */
.logs-container::-webkit-scrollbar {
  width: 6rpx;
}

.logs-container::-webkit-scrollbar-track {
  background: #f0f0f0;
  border-radius: 3rpx;
}

.logs-container::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 3rpx;
}

.logs-container::-webkit-scrollbar-thumb:hover {
  background: #999;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .demo-container {
    padding: 16rpx;
  }
  
  .demo-section {
    padding: 24rpx;
    margin-bottom: 24rpx;
  }
  
  .section-title {
    font-size: 28rpx;
  }
  
  .result-title {
    font-size: 26rpx;
  }
  
  .result-desc {
    font-size: 22rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.demo-section {
  animation: fadeInUp 0.6s ease forwards;
}

.demo-section:nth-child(2) { animation-delay: 0.1s; }
.demo-section:nth-child(3) { animation-delay: 0.2s; }
.demo-section:nth-child(4) { animation-delay: 0.3s; }
.demo-section:nth-child(5) { animation-delay: 0.4s; }
.demo-section:nth-child(6) { animation-delay: 0.5s; }

.result-item {
  animation: fadeInUp 0.4s ease forwards;
}

.result-item:nth-child(1) { animation-delay: 0.1s; }
.result-item:nth-child(2) { animation-delay: 0.2s; }
.result-item:nth-child(3) { animation-delay: 0.3s; }
.result-item:nth-child(4) { animation-delay: 0.4s; }
.result-item:nth-child(5) { animation-delay: 0.5s; }