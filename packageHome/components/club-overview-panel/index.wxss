.club-overview-panel {
  width: 100%;
  height: 100vh;
  background: #f7f8fa;
}

.overview-scroll {
  width: 100%;
  height: 100vh;
}

/* 加载状态 */
.loading-container {
  padding: 20rpx;
}

.club-skeleton {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 16rpx;
}

.club-skeleton-left {
  width: 200rpx;
  flex-shrink: 0;
}

.club-skeleton-right {
  flex: 1;
}

/* 协会列表 */
.club-list {
  padding: 20rpx;
}

.club-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  height: 380rpx;
}

/* 左侧协会信息 */
.club-info {
  width: 200rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}

.club-cover {
  width: 200rpx;
  height: 250rpx;
  background: #f0f0f0;
}

.club-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 12rpx 0;
}

.club-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.club-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 右侧活动列表 */
.club-events {
  flex: 1;
  position: relative;
  overflow: hidden;
  background: #f8f9fa;
}

.events-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 12rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 24rpx;
  color: #999;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.no-more text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
}

/* 嵌套弹窗样式 */
.nested-popup-shell {
  width: 100%;
  height: 100%;
  position: relative;
}
