/* 基础变量 */
:root {
  --primary: rgb(223, 118, 176);
  --primary-light: rgba(223, 118, 176, 0.15);
  --primary-medium: rgba(223, 118, 176, 0.3);
  --primary-dark: rgb(195, 93, 151);
  --text-dark: #333333;
  --text-medium: #666666;
  --text-light: #999999;
  --bg-color: #fff;
  --bg-light: #fcf7fa;
  --border-radius: 16rpx;
  --shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 页面主容器 */
.event-container {
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 列表选项卡特殊样式 */
.list-tab {
  position: relative;

}

/* 固定在顶部的月份显示 */
.fixed-month-display {
  position: fixed;
  top: 88rpx;
  left: 0;
  z-index: 99;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  color: rgb(223, 118, 176);
  font-weight: 500;
  border-radius: 0 8rpx 8rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 月份文本样式 */
.month-text {
  font-size: 28rpx;
  color: rgb(223, 118, 176);
  font-weight: 500;
}

/* 自定义vant Tab组件样式 */
.van-tab {
  flex: 1 !important;
  min-width: 25% !important;
  position: sticky;
}

.van-tabs__wrap {
  background-color: #fff;
}

.van-tab--active {
  font-weight: bold !important;
  color: rgb(223, 118, 176) !important;
}

.van-tabs__line {
  background-color: rgb(223, 118, 176) !important;
  height: 6rpx !important;
  width: 120rpx !important;
  border-radius: 3rpx !important;
}

/* 内容区域 */
.list-content {
  padding-top: 10rpx;
}

/* 瀑布流容器 */
.waterfall-container {
  padding: 10rpx;
  height: calc(100vh - 10rpx);
  overflow-y: auto;
}

/* 全宽列布局 */
.full-width-column {
  width: 100%;
  padding: 0 8rpx;
}

/* 卡片样式 */
.joined-item {
  margin-bottom: 20rpx;
}

.joined-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  height: 200rpx;
  width: 100%;
}

.joined-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}

.waterfall-item {
  margin-bottom: 20rpx;
}

/* 时间线项目样式 */
.timeline-item {
  position: relative;
  width: 100%;
}

/* 卡片内容 */
.card-content {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  height: 100%;
}

.card-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  margin-right: 20rpx;
}

.card-right {
  width: 200rpx;
  height: 180rpx;
  flex-shrink: 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.card-info {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
  margin-top: auto;
}

.card-location, .card-tag {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 8rpx;
}

.card-location .van-icon, .card-tag .van-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  color: rgb(223, 118, 176);
}

/* 空状态容器 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

/* 日历容器 */
.calendar-container {
  background-color: #fff;
  min-height: 90vh;
  position: relative;
  padding-bottom: 20px;
}

/* 日历无数据提示 */
.calendar-empty-tip {
  text-align: center;
  color: #999;
  font-size: 14px;
  padding: 20px 0;
}

/* 添加加载更多按钮样式 */
.load-more-container {
  display: flex;
  justify-content: center;
  padding: 30rpx 0 50rpx;
}

.load-more-btn {
  width: 240rpx !important;
  height: 70rpx !important;
  border-radius: 35rpx !important;
  color: #666 !important;
  font-size: 28rpx !important;
  font-weight: normal !important;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1) !important;
  border: 1px solid #eee !important;
  background-color: #fff !important;
}

/* 按钮禁用状态 */
.load-more-btn.van-button--disabled {
  color: #999 !important;
  background-color: #f5f5f5 !important;
}

/* 图标样式 */
.load-more-btn .van-icon {
  font-size: 28rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

/* 月份显示占位符，防止内容被遮挡 */
.month-display-placeholder {
  height: 70rpx; /* 与fixed-month-display高度匹配 */
  width: 100%;
  margin-bottom: 10rpx;
} 