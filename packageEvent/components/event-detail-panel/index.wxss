/* 活动详情面板样式 - 复刻 event-detail 页面 */
.event-detail-panel {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #fff;
  overflow: hidden;
}

/* 灰色蒙层样式 */
.disabled-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: all;
}

.disabled-overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  margin: 40rpx;
}

.disabled-overlay-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

.disabled-overlay-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-top: 8rpx;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: #fff;
}

.loading-text,
.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* 分段导航 */
.section-nav {
  flex-shrink: 0;
  z-index: 100;
  background: linear-gradient(180deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.85) 100%);
  backdrop-filter: blur(10rpx);
}

.nav-scroll {
  height: 88rpx;
}

.nav-content {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
  white-space: nowrap;
}

.nav-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  padding: 0 24rpx;
  margin-right: 24rpx;
  font-size: 28rpx;
  color: rgba(0,0,0,0.6);
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.nav-item.active {
  background-color: #ff6900;
  color: #fff;
  font-weight: 500;
}

/* 主内容区域 - 使用 calc 计算高度 */
.main-content {
  height: calc(100vh - 200rpx - 140rpx);
  -webkit-overflow-scrolling: touch;
}

/* 通用区域样式 */
.section {
  margin-bottom: 24rpx;
}

.section-header {
  padding: 32rpx 32rpx 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 封面轮播 */
.cover-section {
  position: relative;
  margin-bottom: 0;
}

.cover-swiper {
  width: 100%;
  height: 500rpx;
}

.cover-img {
  width: 100%;
  height: 100%;
}

.thumbnail-indicators {
  position: absolute;
  bottom: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.thumb-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  overflow: hidden;
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.thumb-item.active {
  opacity: 1;
  box-shadow: 0 0 0 2rpx #ff6900;
}

.thumb-img {
  width: 100%;
  height: 100%;
}

/* 活动信息卡片 */
.info-section {
  background: #f5f5f5;
}

.info-card {
  background: #f8f8f8;
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  border-radius: 16rpx;
}

.event-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.event-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.info-row:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.info-content {
  flex: 1;
  margin-left: 16rpx;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 地图区域 */
.map-container {
  margin: 0 32rpx 32rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.map-img {
  width: 100%;
  height: 200rpx;
}

/* 参与人员区域 */
.members-section {
  background: #f5f5f5;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -24rpx;
  position: relative;
  z-index: 10;
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx 24rpx;
}

.member-item {
  width: 16.66%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
}

.member-name {
  font-size: 22rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.empty-members,
.empty-details {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #999;
  font-size: 28rpx;
}

/* 活动详情区域 */
.details-section {
  background: #f5f5f5;
}

.details-images {
  padding: 0 32rpx 32rpx;
}

.detail-image-item {
  margin-bottom: 8rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f8f8f8;
}

.detail-img {
  width: 100%;
  display: block;
}

/* 协会信息区域 */
.club-section {
  background: #f0f0f0;
}

.club-card {
  margin: 0 32rpx 32rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 20rpx;
}

.club-main {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.club-avatar {
  flex-shrink: 0;
}

.club-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
}

.club-info {
  flex: 1;
}

.club-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.club-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.club-president {
  font-size: 22rpx;
  color: #999;
}

.club-data {
  display: flex;
  justify-content: space-around;
  padding-top: 16rpx;
  border-top: 1rpx solid #e0e0e0;
}

.data-item {
  text-align: center;
}

.data-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 4rpx;
}

.data-label {
  font-size: 22rpx;
  color: #999;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 160rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(0deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.9) 70%, transparent 100%);
  backdrop-filter: blur(20rpx);
}

.action-left {
  display: flex;
  gap: 16rpx;
}

.action-right {
  display: flex;
  gap: 16rpx;
  flex: 1;
  justify-content: flex-end;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: rgba(0,0,0,0.05);
  color: #666;
  padding: 0 24rpx;
}

.action-btn.secondary text {
  margin-top: 4rpx;
  font-size: 20rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6900 0%, #ff8533 100%);
  color: #fff;
  padding: 0 32rpx;
  min-width: 160rpx;
  font-size: 28rpx;
  flex-direction: row;
}

.action-btn.danger {
  background: linear-gradient(135deg, #ff4757 0%, #ff6b7a 100%);
  color: #fff;
  padding: 0 32rpx;
  min-width: 140rpx;
  font-size: 28rpx;
  flex-direction: row;
}

.action-btn.disabled {
  background: rgba(0,0,0,0.05);
  color: #999;
  padding: 0 32rpx;
  min-width: 140rpx;
  font-size: 28rpx;
  flex-direction: row;
}

.action-btn:active {
  transform: scale(0.95);
}
